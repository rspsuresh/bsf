function bindRequests() {
    var costCentreId = $('#CostCentre').val(); 
    var RequestType = $('#RequestType').val();
	var fromDate=$('#fromDate').val();
	var toDate=$('#toDate').val();
    $('.loading_area').show();
    $.ajax({
        url:getBaseURL()+'ats/report/detailed-request-register',
        type:"post",
        data:{'CostCentreId':costCentreId, 'RequestType': RequestType,'fromDate':fromDate,'toDate':toDate},
        dataType:"json",
        success:function(data, textStatus, jqXHR){
			$("#jqxgrid").jqxGrid('clear');
			  var source =
				{
					dataFields: [
						{name: 'RequestId', type: 'string'},
						{name: 'RequestDate', type: 'date'},
						{name: 'RequestNo', type: 'string'},
						{name: 'RefNo', type: 'string'},
						{name: 'CostCentre', type: 'string'}
					],
					localdata:data['resource'],
					id: 'RequestId',
					datatype: "json",
					async: false
				};
			   var dcAdapter = new $.jqx.dataAdapter(source);
			   var source1 =
				{
					dataFields: [
						{name: 'RequestId', type: 'string'},
						{name: 'Code', type: 'string'},
						{name: 'Resource', type: 'string'},
						{name: 'Specification', type: 'string'},
						{name: 'Unit', type: 'string'},
						{name: 'Qty', type: 'string'},
						{name: 'ReqDate', type: 'string'},
						{name: 'ResourceGroup', type: 'string'}

					],
					localdata:data['project'],
					datatype: "json",
					async: false
				};

			  var transAdapter = new $.jqx.dataAdapter(source1, { autoBind: true });
				orders = transAdapter.records;

				var nestedGrids1 = new Array();

				// create nested grid.
				var initrowdetails1 = function (index, parentElement, gridElement, record) {

					var id = record.uid.toString();
					var grid = $($(parentElement).children()[0]);
					$(grid).attr('id', 'nestedGrid_' + id);
					nestedGrids1[index] = grid;
					var filtergroup = new $.jqx.filter();
					var filter_or_operator = 1;
					var filtervalue = id;
					var filtercondition = 'equal';
					var filter = filtergroup.createfilter('stringfilter', filtervalue, filtercondition);
					// fill the orders1 depending on the id.
					var ordersbyid = [];
					for (var m = 0; m < orders.length; m++) {
						var result = filter.evaluate(orders[m]["RequestId"]);
						if (result)
							ordersbyid.push(orders[m]);
					}

					var  source1 = {
						dataFields: [

							{name: 'RequestId', type: 'string'},
							{name: 'Code', type: 'string'},
							{name: 'Resource', type: 'string'},
							{name: 'Specification', type: 'string'},
							{name: 'Unit', type: 'string'},
							{name: 'Qty', type: 'string'},
							{name: 'ReqDate', type: 'string'},
							{name: 'ResourceGroup', type: 'string'}
						],
						//id: 'RequestId'
						localdata: ordersbyid
                    };
				   // alert(JSON.stringify(source1));

				   var nestedtransAdapter1 = new $.jqx.dataAdapter(source1); 

					if (grid != null) {
						grid.jqxGrid({
							source: nestedtransAdapter1,
							width: '100%',
							height: 300,
							sortable: true,
							pageable: true,
							rowdetails: true,
							rowsheight: 35,
							columnsresize: true,
							columnsreorder: true,
                            autoheight:true,
                            filterable: true,
                            showfilterrow: true,
							ready: function () {
							},

							columns: [
								{ text: 'Code', dataField: 'Code', align: 'left', cellsalign: 'left',width:'15%'},
								{ text: 'Resource', dataField: 'Resource', align: 'left', cellsalign: 'left',width:'15%'},
								{ text: 'Unit', dataField: 'Unit', align: 'left', cellsalign: 'left',width:'10%'},
								{ text: 'ReqDate', dataField: 'ReqDate', align: 'left', cellsalign: 'left',width:'15%',cellsformat: 'MM-dd-yyyy',filtertype: 'date'},
								{ text: 'Qty', dataField: 'Qty', align: 'left', cellsalign: 'left',width:'15%'},
								{ text: 'Specification', dataField: 'Specification', align: 'left', cellsalign: 'left',width:'14%'},
								{ text: 'ResourceGroup', dataField: 'ResourceGroup', align: 'left', cellsalign: 'left',width:'14%'}
							]
						});

					}
				};
				$("#jqxgrid").jqxGrid(
					{
						width: '100%',
						source: dcAdapter,
						autoheight: true,
						sortable: true,
						pageable: true,
						pageSize: 10,
						rowsheight: 35,
						rowdetails: true,
						columnsresize: true,
						columnsreorder: true,
                        filterable: true,
                        showfilterrow: true,
                      //  height: 300,
						initRowDetails: initrowdetails1,
						rowdetailstemplate: {
							rowdetails: "<div id='grid' style='margin: 10px;'></div>",
							rowdetailsheight: 200,
							rowdetailshidden: true
						},
						
						columns: [

							{text: 'Request Id', dataField: 'RequestId', align: 'left', cellsalign: 'left'},
							{text: 'Request Date', dataField: 'RequestDate', align: 'left', cellsalign: 'left',editable:false,filtertype: 'date',cellsformat: 'dd-MM-yyyy'},
							{text: 'Request No', dataField: 'RequestNo', align: 'left', cellsalign: 'left'},
							{text: 'Ref No', dataField: 'RefNo', align: 'left', cellsalign: 'left'},
							{text: 'Cost Centre', dataField: 'CostCentre', align: 'left', cellsalign: 'left'}
						]
					});
				$("#jqxgrid").jqxGrid('showgroupsheader', false);
				//Print option
				$("#excelExport").click(function () {
					$("#jqxgrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
				});
				$("#csvExport").click(function () {
					$("#jqxgrid").jqxGrid('exportdata', 'csv', 'jqxGrid');
				});
				$("#htmlExport").click(function () {
					$("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid');
				});

				$("#print").click(function () {
					var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html');
					//var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);
					var newWindow = window.open('', '', 'width=800, height=500'),
						document = newWindow.document.open(),
						pageContent =
							'<!DOCTYPE html>\n' +
							'<html>\n' +
							'<head>\n' +
							'<meta charset="utf-8" />\n' +
							'<title>Detailed Request Register</title>\n' +
							'<h1>Detailed Request Register</h1>\n' +
							'</head>\n' +
							'<body>\n' + gridContent + '\n</body>\n</html>';
					document.write(pageContent);
					document.close();
					newWindow.print();

					/*$("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);*/
				});

				$("#jqxgrid").bind('rowselect', function (event) {
					var row = event.args.rowindex;
					var datarow = $("#jqxgrid").jqxGrid('getrowdata', row);

				});
            $('.loading_area').hide();
        }
    });
}		
</script>