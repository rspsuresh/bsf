function forgotValidate()
{
	$('.error_message').hide();
	$('.login_load').hide();
	$('.signin_btn').show();
	$('.login_input').css('opacity','1');
	if($('#email').val() == '') {
		$('#email').closest('.login_input').find(".text_error").show();
		$('#email').closest('.login_input').find(".text_error").html('<p>Required</p>');
		$('#email').focus();
		return false;
	} else if($('#email').val() != '' && validateEmail($('#email').val())==false) {
		$('#email').closest('.login_input').find(".text_error").show();
		$('#email').closest('.login_input').find(".text_error").html('<p>Please enter valid email id</p>');
		$('#email').focus();
		return false;
	}
	return true;
}
</script>