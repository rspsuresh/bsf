<script>
function loginValidate()
{
	$('.error_message').hide();
	$('.login_load').hide();
	$('.signin_btn').show();
	$('.login_input').css('opacity','1');
	if($('#username').val() == '') {
		$('#username').closest('.login_input').find(".error_message").show();
		$('#username').closest('.login_input').find(".error_message").html('<p>Required</p>');
		$('#username').focus();
		return false;
	}
	if($('#password').val() == '') {
		$('#password').closest('.login_input').find(".error_message").show();
		$('#password').closest('.login_input').find(".error_message").html('<p>Required</p>');
		$('#password').focus();
		return false;
	}
	$("form").submit();
	return true;
}
</script>