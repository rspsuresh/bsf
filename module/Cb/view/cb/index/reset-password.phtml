<script>
function resetValidate()
{
	$('.error_message').hide();
	$('.login_load').hide();
	$('.signin_btn').show();
	$('.login_input').css('opacity','1');
	if($('#code').val() == '') {
		$('#code').closest('.login_input').find(".error_message").show();
		$('#code').closest('.login_input').find(".error_message").html('<p>Required</p>');
		$('#code').focus();
		return false;
	}
	if($('#password').val() == '') {
		$('#password').closest('.login_input').find(".error_message").show();
		$('#password').closest('.login_input').find(".error_message").html('<p>Required</p>');
		$('#password').focus();
		return false;
	}
	if($('#confirmPassword').val() == '') {
		$('#confirmPassword').closest('.login_input').find(".error_message").show();
		$('#confirmPassword').closest('.login_input').find(".error_message").html('<p>Required</p>');
		$('#confirmPassword').focus();
		return false;
	} else if($('#password').val() != $('#confirmPassword').val()) {
		$('#confirmPassword').closest('.login_input').find(".error_message").show();
		$('#confirmPassword').closest('.login_input').find(".error_message").html('<p>Password mismatch!</p>');
		$('#confirmPassword').focus();
		return false;
	}
	$("form").submit();
	return true;
}
</script>