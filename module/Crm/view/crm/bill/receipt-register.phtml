            url:getBaseURL()+'crm/bill/receipt-register',
            type:'POST',
            data:{"choose":choose,"mode":"filter"},
            success:function(data, textStatus, jqXHR){
                if (jqXHR.status != 200) {
                    alert('Failed !!!!');
                    return false;
                }
                else
