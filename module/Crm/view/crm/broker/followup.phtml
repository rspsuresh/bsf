function changeCallDate(myDat) {
    var sDate = myDat.split('-');
    var myDate = new Date(sDate[1]+'/'+sDate[0] +'/'+sDate[2]);
    myDate.setDate(myDate.getDate() + 1);
    $('.date_picker_call').val('');
    $('.date_picker_call').datepicker('setStartDate', myDate);
}

