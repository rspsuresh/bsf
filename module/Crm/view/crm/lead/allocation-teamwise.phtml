        var ele = $(".showDiv");
        $(".error").text("");
        var bool = true;
        ele.find("input,checkbox, select, textarea").each(function(){

            var tagname = $(this).prop("tagName").toLowerCase();
            if(tagname == 'select'){
                if($(this).val() == "" || $(this).val() == null){
                    bool = false;
                    $(this).closest('.form-group').find(".error_message").show();
                    $(this).focus();
                    return false;
                }
            }
            else {
                $(".error_message").remove();
            }
        });
        if(bool){
            $('form').submit();
        }

    });
