$(document).ready(function() {
  var getslideHeight = $('.slide.active').height();

  $('.slides').css({
    height: getslideHeight
  });

  function calcslideHeight() {
    getslideHeight = $('.slide.active').height();

    $('.slides').css({
      height: getslideHeight
    });
  }
  var slideItem = $('.slide'),
    slideCurrentItem = slideItem.filter('.active animated fadeInUp');
 
  $('#next').on('click', function(e) {
    e.preventDefault();
    
    var nextItem = slideCurrentItem.next();
	    var Item=slideCurrentItem;
	
    slideCurrentItem.removeClass('active animated fadeInUp');
     
    if (nextItem.length) {

      slideCurrentItem = nextItem.addClass('active animated fadeInUp');
    }
	else {
	  slideCurrentItem = slideItem.first().addClass('active animated fadeInUp');
	 
    }
	if(Item.attr("id")=='lastSlide'){
	
	$('form').submit();	
	}	
     
    calcslideHeight();
  });

  $('#prev').on('click', function(e) {
    e.preventDefault();

    var prevItem = slideCurrentItem.prev();

    slideCurrentItem.removeClass('active animated fadeInUp');

    if (prevItem.length) {
      slideCurrentItem = prevItem.addClass('active animated fadeInUp');
    } else {
      slideCurrentItem = slideItem.last().addClass('active animated fadeInUp');
    }
    calcslideHeight();
  });
});
</script>