<script>
function formValidate() {
	var errorFlag = 0;
	var errorFlagCount = 0;
	if($('#projectId').val() == "" || $('#projectId').val() == null){
		$('#projectId').closest('.form-group').find(".error_message").show();
		errorFlagCount = errorFlagCount + 1;
		errorFlag = 1;
		if(errorFlagCount == 1) {
			$('#projectId').focus();
		}
	}	
	
	if(errorFlag == 0) {
		return true;
	} else {
		return false;
	}
} 

