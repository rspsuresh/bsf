$('.client').click(function(){
	$("#clientser").submit();
})
$('#ProjectDetail').hide();	
$("#ticketId").change(function(){
	var sname = $("#ticketId option:selected").val();
    $('.newentry').html('');
	$.ajax({
        url: getBaseURL() + 'crm/property/clientbasedservice',
        data: {LeadId: sname},
        type: 'POST',
        success: function (data, status, xhr) {
            console.log(data);
            if (data !="" ) {

					$("#dProjectName").html(data.ProjectName);
					$('#BlockName').html(data.BlockName);
                    $('#FloorName').html(data.FloorName);
                    $('#UnitType').html(data.UnitTypeName);
                    $('#UnitNo').html(data.UnitNo);
                    $('#UnitArea').html(data.UnitArea);
                    $('#Facing').html(data.Description);
                    $('#BuyerName').html(data.BuyerName);
            $("#ProjectDetail").show();

            }
            else{
            $("#ProjectDetail").hide();
        }
        },
        error: function (xhr, status, error) {
            alert(xhr.responseText);
        }
    });
	
	
	$('#ProjectDetail').show();
});	

</script>