<script type="text/javascript">
    var data = <?php echo (isset($payment)) ? json_encode($payment) : ''?>,
        $jqxGrid = $("#jqxGrid");
    $(function () {
        var source = {
            localdata: data,
            dataType: "json",
            dataFields: [
			{ name: 'LeadName', type: 'string' },
            { name: 'PVDate',  type: "date", format: 'dd/MM/yyyy'},
            { name: 'PVNo', type: 'string' },
            { name: 'RegisterId', type: 'int' },
            { name: 'UnitNo', type: 'string' },
            { name: 'Amount', type: 'string' },
            { name: 'ChequeDate', type: 'string' },
            { name: 'ProjectName', type: 'string' },
            { name: 'Remarks', type: 'string' }
            ],
            id: 'RegisterId'
        };

        var dataAdapter = new $.jqx.dataAdapter(source);
        $jqxGrid.jqxGrid({
            width: "100%",
            source: dataAdapter,
            sortable: true,
            filterable: true,
            pageable: true,
			pagerMode: 'advanced',
			pagerHeight: 40,
			rowsheight:40,
            rowDetails: true,
            autoheight: true,
            showfilterrow: true,
            editable: false,
            altrows: true,
            enabletooltips: true,
            columns: [
                {text: 'RegisterId', datafield: 'RegisterId', hidden: true, filterable: false},
                {text: 'PVDate', datafield: 'PVDate', filtertype: 'date', cellsformat: 'dd/MM/yyyy' , width: '10%'},
				{text: 'PVNo', datafield: 'PVNo', width: '10%'},
                {text: 'LeadName', datafield: 'LeadName', width: '25%'},
                {text: 'Unit Name', datafield: 'UnitNo', width: '15%'},
                {text: 'ProjectName', datafield: 'ProjectName', width: '15%'},
                {text: 'Amount', datafield: 'Amount', width: '15%',
                     cellsrenderer: function (row) {
                        return '<div class="text-right">' + sanitizeNumber($jqxGrid.jqxGrid('getCellValue', row, 'Amount'),2,true) + '</div>';
                     }},
               // { text: 'ChequeNo', dataField: 'ChequeNo', width:'10%'},
              //  { text: 'ChequeDate', dataField: 'ChequeDate', width:'23%'},
               //{ text: 'BankName', dataField: 'BankName', width:'15%'},
                //{ text: 'Remarks', dataField: 'Remarks', width:'10%'},
                {text: 'Action', sortable: false, filterable: false, align: 'left', width: '10%',
                    cellsrenderer: function (row) {
                        var RegisterId = $jqxGrid.jqxGrid('getCellValue', row, 'RegisterId'),
                            editLink = '<a title="Edit" href="'+ getBaseURL() + 'crm/property/payment-edit/'+RegisterId+'" style="padding-left: 15px; padding-top:10px;"><i class="fa fa-pencil-square-o reg-icon top-ic5"></i></a>';
                        return editLink + "&nbsp;&nbsp;" + '<a title="Delete" onclick="payRowDelete(' + row + ');return false;"><i class="fa fa-trash-o reg-icon top-ic5"></i></a>';
                    }
                }
            ]
        });
    });

    $('#btnDelete').on('click', function () {
		//alert("1");
            var remarks = $("#remarks").val();
            if(remarks.length == 0) {
                showError($remarks, 'Required!');
                return;
            } else
                removeError($("#remarks"));

	$('#mdlDelete').modal('hide');
	var rowData = $jqxGrid.jqxGrid('getrowdata', $('#mdlDelete').data('row'));
            $.ajax({
                url: getBaseURL() + 'crm/pm/payment-delete',
                type: 'POST',
                async: false,
                data: {"RegisterId": rowData.RegisterId, "Remarks": remarks},
                success:function(data, textStatus, jqXHR){
                    if (jqXHR.status == 200)
                        $jqxGrid.jqxGrid("deleterow", rowData.RegisterId);
                    else
                        alert('Failed to delete!');
                },
                error:function(jqXHR, textStatus, errorThrown){
                    alert('Failed to delete!');
                }
            });
            $("#remarks").val('');
	});
	function payRowDelete(row) {
		var rowData = $jqxGrid.jqxGrid('getrowdata', row);
		$('#mdlDelete').data('row', row).modal('show');
        $("#remarks").val('');
    }
    $("#excelExport").click(function () {
        $("#jqxGrid").jqxTreeGrid('exportData', 'xls');
    });
    $("#csvExport").click(function () {
        $("#jqxGrid").jqxTreeGrid('exportData', 'csv');
    });

    $("#print").click(function () {
        $("#jqxGrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
    });
</script>