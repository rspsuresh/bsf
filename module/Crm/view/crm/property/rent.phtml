function validation(){
	var errorFlag = 0;
	var errorFlagCount = 0;
    var rentamount=$('#perMountAmount').val();
    var serviceamount=$('#serviceAmount').val();
	if($('input[name="availRentProp"]:checked').val() == 1){ 
	
		if(rentamount == "" || rentamount.length <0){
			showErrorMsg($('#perMountAmount'), "Required");
			errorFlagCount = errorFlagCount + 1;
			errorFlag = 1;
			$('#perMountAmount').focus();
		} else {
			removeErrorMsg($('#perMountAmount'));
		}
		if(serviceamount == "" || serviceamount.length <0){
			showErrorMsg($('#serviceAmount'), "Required");
			errorFlagCount = errorFlagCount + 1;
			errorFlag = 1;
			$('#serviceAmount').focus();
		} else {
			removeErrorMsg($('#serviceAmount'));
		}
    }

	if(errorFlag == 0) {
		return true;
	} else {
		return false;
	}
}
function showErrorMsg($tarIp, msg) {
	var $tarErrorMsg = $tarIp.closest('div').find('.error_message');
	$tarErrorMsg.find('p').text(msg);
	$tarErrorMsg.show();
}

function removeErrorMsg($tarIp) {
	var $tarErrorMsg = $tarIp.closest('div').find('.error_message');
	$tarErrorMsg.find('p').text('Please Enter ' + $tarIp.attr('label') + '...');
	$tarErrorMsg.hide();
}
