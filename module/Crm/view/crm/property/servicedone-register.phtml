<script type="text/javascript">
    var data = <?php echo (isset($serviceReg)) ? json_encode($serviceReg) : ''?>,
        $jqxGrid = $("#jqxGrid");
    $(function () {
        var source = {
            localdata: data,
            dataType: "json",
            dataFields: [
			{ name: 'serviceDoneRegId', type: 'int' },
			{ name: 'LeadName', type: 'string' },
            { name: 'ServiceDoneDate',  type: "date", format: 'dd/MM/yyyy'},
            { name: 'RefNo', type: 'string' },
            { name: 'Totalservice', type: 'int' },
            { name: 'TotalAmount', type: 'int' },
            { name: 'UnitNo', type: 'string' },
            { name: 'LeadName', type: 'string' },
            { name: 'ProjectName', type: 'string' }
          ],
            id: 'serviceDoneRegId'
        };

        var dataAdapter = new $.jqx.dataAdapter(source);
        $jqxGrid.jqxGrid({
            width: "100%",
            source: dataAdapter,
            sortable: true,
            pagerButtonsCount: 6,
            filterable: true,
            pageable: true,
            rowDetails: true,
            autoheight: true,
            showfilterrow: true,
            editable: false,
            altrows: true,
            enabletooltips: true,
            columns: [
                {text: 'serviceDoneRegId', datafield: 'serviceDoneRegId', hidden: true, filterable: false},
                {text: 'ServiceDoneDate', datafield: 'ServiceDoneDate', filtertype: 'date', cellsformat: 'd' , width: '10%'},
			    {text: 'LeadName', datafield: 'LeadName', width: '10%'},
				{text: 'RefNo', datafield: 'RefNo', width: '15%'},
                {text: 'Unit Name', datafield: 'UnitNo', width: '15%'},
                {text: 'Totalservice', datafield: 'Totalservice', width: '10%'},
                { text: 'TotalAmount', dataField: 'TotalAmount', width:'10%'},
				{text: 'ProjectName', datafield: 'ProjectName', width: '15%'},
              //  { text: 'ChequeDate', dataField: 'ChequeDate', width:'23%'},
               //{ text: 'BankName', dataField: 'BankName', width:'15%'},
               // { text: 'Remarks', dataField: 'Remarks', width:'10%'},
                {text: 'Action', sortable: false, filterable: false, align: 'left', width: '20%',
                    cellsrenderer: function (row) {
                        var serviceDoneRegId = $jqxGrid.jqxGrid('getCellValue', row, 'serviceDoneRegId'),
                            editLink = '<a title="Edit" href="'+ getBaseURL() + 'crm/property/servicedone-edit/'+serviceDoneRegId+'" style="padding-left: 15px; padding-top:10px;"><i class="fa fa-pencil-square-o reg-icon top-ic5"></i></a>';
                        return editLink + "&nbsp;&nbsp;" + '<a title="Delete" onclick="payRowDelete(' + row + ');return false;"><i class="fa fa-trash-o reg-icon top-ic5"></i></a>';
                    }
                }
            ]
        });
    });

    $('#btnDelete').on('click', function () {
		//alert("1");
            var remarks = $("#remarks").val();
            if(remarks.length == 0) {
                showError($remarks, 'Required!');
                return;
            } else
                removeError($("#remarks"));

	$('#mdlDelete').modal('hide');
	var rowData = $jqxGrid.jqxGrid('getrowdata', $('#mdlDelete').data('row'));

            $.ajax({
                url: getBaseURL() + 'crm/property/servicedone-delete',
                type: 'POST',
                async: false,
                data: {"serviceDoneRegId": rowData.serviceDoneRegId, "Remarks": remarks},
                success:function(data, textStatus, jqXHR){
                    if (jqXHR.status == 200)
                        $jqxGrid.jqxGrid("deleterow", rowData.serviceDoneRegId);
                    else
                        alert('Failed to delete!');
                },
                error:function(jqXHR, textStatus, errorThrown){
                    alert('Failed to delete!');
                }
            });
            $("#remarks").val('');
	});
	function payRowDelete(row) {
		var rowData = $jqxGrid.jqxGrid('getrowdata', row);
		$('#mdlDelete').data('row', row).modal('show');
        $("#remarks").val('');
    }
</script>