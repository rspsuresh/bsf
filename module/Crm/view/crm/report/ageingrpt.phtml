function renderRowDetail(id) {
    var dataValue = '';
    $.ajax({
        url: getBaseURL() + 'crm/Report/getunitdetails',
        type: 'POST',
        data: {unitId: id},
        async: false,
        success: function(data,status, xhr) {
            if(xhr.status == 200)
                dataValue = data;
        }, error: function(xhr, status, errorThrown) {
        }
    });
    return dataValue;
}

