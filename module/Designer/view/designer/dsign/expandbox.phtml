<script>

var boolean = false;
var timer;

$('.item').click(function(event) {

    event.stopPropagation();

    if (boolean === false) {
        boolean = true;

        var id = event.target.id;
        var selectedItem;

        for (var i = 1; i < 5; i++) {

            var item = 'item' + i;
            var text = 'text' + i;

            if (item === id) {

                selectedItem = '#' + item;
                displayText = '#' + text;

                $('#' + item).css({
                    'left': '220px',
                    'width': '300px'
                });

            } else {
                $('#' + text).css({
                    'visibility': 'hidden',
                    'opacity': '0'
                });

                if ('#' + item === '#item1') {
                    $('#' + item).css({
                        'left': '0px',
                        'height': '50px',
                        'width': '200px',
                        'top': '0px'

                    });
                }
                if ('#' + item === '#item2') {
                    $('#' + item).css({
                        'left': '0px',
                        'height': '50px',
                        'width': '200px',
                        'top': '70px'
                    });
                }
                if ('#' + item === '#item3') {
                    $('#' + item).css({
                        'left': '0px',
                        'height': '50px',
                        'width': '200px',
                        'top': '140px'
                    });
                }
                if ('#' + item === '#item4') {
                    $('#' + item).css({
                        'left': '0px',
                        'height': '50px',
                        'width': '200px',
                        'top': '210px'
                    });
                }
            }
        }

        timer = setTimeout(function() {

            $(selectedItem).css({
                'height': ' 260px',
                'top': '0px'
            });

            $(displayText).css({
                'visibility': 'visible',
                'opacity': '1'
            });

            boolean = false;
        }, 400);
    }
});


$(document).click(function(event) {

    clearTimeout(timer);
    boolean = false;

    var id = event.target.id;
    var top = 0;

    for (var i = 1; i < 5; i++) {

        var item = 'item' + i;
        var text = 'text' + i;

        $('#' + text).css({
            'visibility': 'hidden',
            'opacity': '0'
        });

        $('#' + item).css({
            'left': '0px',
            'height': '50px',
            'width': '200px',
            'top': top + 'px'

        });

        top = top + 70;
    }
});


</script>