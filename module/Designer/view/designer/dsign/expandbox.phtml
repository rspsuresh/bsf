    position: absolute;
    margin-top: 10px;
    padding: 0;
    width: 200px;
    height: 50px;
    margin: 10px;
    -webkit-transition: top 0.2s, height 0.2s, width 0.2s, left 0.4s, line-height 0.2s, font-size 0.2s;
    border-radius: 2px;
    text-align: center;
    -webkit-box-shadow: 0px 5px 8px 1px rgba(0, 0, 0, 0.15);
    font-family: Avenir;
    display: flex;
    -webkit-justify-content: center;
}

#item1 {
    top: 0px;
    left: 0px;
    background-color: #314D5C;
}

#item2 {
    top: 70px;
    left: 0px;
    background-color: #41525E;
}

#item3 {
    top: 140px;
    left: 0px;
    background-color: #826C69;
    background-size: contain;
}

#item4 {
    top: 210px;
    left: 0px;
    background-color: #FDA26D;
}

