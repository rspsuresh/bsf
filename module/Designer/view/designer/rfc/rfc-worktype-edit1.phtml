$(".sampletest").click(function(){

	var step = $(this).attr("sid");
	if(step=='firstStep'){
		$(this).closest("td").find(".secondStep").fadeOut("2000", function(){
			$(this).closest("td").find("."+step).fadeIn("2000");
		});		
	}
	else{
		$(this).closest("td").find(".firstStep").fadeOut("2000", function(){
			$(this).closest("td").find("."+step).fadeIn("2000");
		});		
	}

	//alert($(this).closest("div").html()+"----"+step)
	

})
$(".mainTr").click(function(){
	//alert($(this).closest("tr").next(".subTr").html())
