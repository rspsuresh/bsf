<script>

  var employees = [{
      "EmployeeID": 2,"Name": "Andrew","Cerdit": "5485","Debit": "8545",
     children: [{
          "EmployeeID": 8,"Name": "Laura","Cerdit": "45875","Debit": "6985", }, 
			  {
          "EmployeeID": 1,"Name": "Laura","Cerdit": "8545","Debit": "8652", 
      }, {
          "EmployeeID": 3,"Name": "Laura","Cerdit": "8521","Debit": "6522", 
      }, {
          "EmployeeID": 4,"Name": "Laura","Cerdit": "5425","Debit": "8745", 
      }, {
          "EmployeeID": 5,"Name": "Laura","Cerdit": "4588","Debit": "6589", 
              "expanded": "true",
        
      }]
	  
  }
  
  ];
  //// prepare the data
  var source = {
      dataType: "json",
      dataFields: [
	  {name: 'EmployeeID',type: 'number'}, 
	  {name: 'Name',type: 'string'}, 
	  {name: 'Cerdit',type: 'string'}, 
	  {name: 'Debit',type: 'string'},
	  {name: 'children',type: 'array'},
	  {name: 'expanded',type: 'bool'},
	  ],
      hierarchy: {
          root: 'children'
      },
      id: 'EmployeeID',
      localData: employees
  };
  var dataAdapter = new $.jqx.dataAdapter(source);

  // create Tree Grid
  $("#treeGrid").jqxTreeGrid({
	            width:'100%',
     	        autoRowHeight: true,
				altRows: true,
				pageable: true,
				showAggregates: true,
			    aggregatesHeight: 35,
				source: dataAdapter,
				pagerButtonsCount: 8,
				toolbarHeight: 35,
      theme: 'energyblue',
      columns: [{text: 'Name',dataField: 'Name',width:'35%',aggregatesRenderer: function (aggregatesText, column, element, aggregates, type) {
									var renderString = "<div class='tot-sum'>";
									renderString += "<table><tr><td>Total</td></table>";
									return renderString;
								} }, 
	            {text: 'Cerdit',dataField: 'Cerdit',width:'30%',align: 'right', cellsAlign: 'right',aggregatesRenderer: function (aggregatesText, column, element, aggregates, type) {
									var renderString = "<div class='tot-sums'>";
									renderString += "<table><tr><td>54487</td></table>";
									return renderString;
								} },
				{text: 'Debit',dataField: 'Debit',width:'35%',align: 'right', cellsAlign: 'right',aggregatesRenderer: function (aggregatesText, column, element, aggregates, type) {
									var renderString = "<div class='tot-sums'>";
									renderString += "<table><tr><td>45885</td></table>";
									return renderString;
								}}, 
			
			 ]

         });
  $("#jqxbutton").jqxButton({
      theme: 'energyblue',
      height: 30
  });
  $('#jqxbutton').click(function () {
      $("#treeGrid").jqxTreeGrid('expandRow',2);
  });
</script> 
