<script type="text/javascript">
    var arr_Lists = <?php echo (isset($accDirectoryList)) ? json_encode($accDirectoryList) : "[]";?>;

    $treeGrid =$("#treeGrid");
    $('#jqxbuttorenn').hide();
    $(function () {
        $(".single_dropdown2").select2({
            placeholder: "",
            minimumResultsForSearch: -1
        });
        $(".multiple_dropdown").select2({
        });
        bindTreeGrid(arr_Lists);

    });

    // prepare the data
    $('.right_lightbox').on('change', function () {
        if($('.right_lightbox').attr('pageRefresh') != 1)
            return;
        $.ajax({
            url:"<?php echo $this->basePath(); ?>/fa/index/accountdirectory",
            type:"post",
            //async:false,
            data:{},
            success:function(data, textStatus, jqXHR){
                bindTreeGrid(JSON.parse(data));
                $("#treeGrid").jqxTreeGrid('refresh');
            },
            error:function(jqXHR, textStatus, errorThrown){
            }
        });
    });

    function bindTreeGrid(arr_Lists){
        if(arr_Lists == "[]"){
            $treeGrid.jqxTreeGrid('clear');
        } else {
            var source =
            {
                dataType: "json",  //"json",
                dataFields: [
                    { name: "AccountId", type: "number" },
                    { name: "AccountName", type: "string" },
                    { name: "ParentAccountId", type: "number" },
                    { name: "TypeName", type: "string" },
                    { name: "LastLevel", type: "string" },
                    { name: "AccountType", type: "string" },
                    { name: "expanded", type: "bool" }
                ],
                hierarchy:
                {
                    keyDataField: { name: 'AccountId' },
                    parentDataField: { name: 'ParentAccountId' }
                },
                id: 'AccountId',
                localData: arr_Lists
            };
            var dataAdapter = new $.jqx.dataAdapter(source, {
                loadComplete: function () {
                    // data is loaded.
                }
            });

            $treeGrid.jqxTreeGrid({
                width: "100%",
                source: dataAdapter,
                pageable: true,
                pagerMode: 'advanced',
                pagerHeight: 40,
                filterable: true,
                filterMode: 'simple',//advanced
                editable: false,
                showAggregates: true,
                aggregatesHeight: 35,
                altRows: true,
                ready: function()
                {
                    $("#treeGrid").jqxTreeGrid('hideColumn', 'AccountId');
                    $("#treeGrid").jqxTreeGrid('hideColumn', 'ParentAccountId');
                },
                columns: [
                    { text: 'Account', dataField: "AccountName", align: 'left', cellsAlign: 'left' , width: '40%' },
                    { text: 'AccountId', dataField: "AccountId", align: 'right', cellsAlign: 'right' , cellsFormat: 'd', hidden:true, filterable: false},
                    { text: 'ParentAccountId', dataField: "ParentAccountId", align: 'right', cellsAlign: 'right' , cellsFormat: 'd', hidden:true, filterable: false },
                    { text: 'Type Name', dataField: "TypeName", align: 'left', cellsAlign: 'left' , width: '30%' },
                    { text: 'LastLevel', dataField: "LastLevel", align: 'right', cellsAlign: 'right', hidden:true, filterable: false},
                    { text: 'AccountType', dataField: "AccountType", align: 'left', cellsAlign: 'left' , width: '30%' }
                    /*,{ text: 'Action', sortable: false, filterable: false, align: 'left', width:'10%',
                        cellsrenderer: function (event) {
                            var editLink = '<a title="Edit" href="#" onclick="billEdit('+event+'); return false;" style="padding-left: 15px;"><i class="fa fa-pencil-square-o reg-icon"></i></a>';
                            return editLink;
                            //return editLink += "&nbsp;&nbsp;" + '<button style="background: transparent;" title="Delete" onclick="billDelete(this,'+row+'); return false;"><i class="fa fa-trash-o reg-icon"></i></button>';
                            //return editLink += "&nbsp;&nbsp;" + '<a title="Report" href="#" onclick="billReport('+row+'); return false;"><i class="fa fa-file-text-o reg-icon-file"></i></a>';
                        }
                    }*/
                ]
            });

            $treeGrid.on('rowDoubleClick', function (event) {
                var args = event.args;
                var row = args.row;
                var parntId=row.ParentAccountId;
                if(parntId!=0){
                    var id=row.AccountId;
                   // window.location.replace(getBaseURL() + "fa/index/accountentry/" + id);
                    $.ajax({
                        url:"<?php echo $this->basePath(); ?>/fa/index/accountentry",
                        type:"post",
                        //async:false,
                        data:{"accountId":id,'type':'getLoadDetails'},
                        success:function(data, textStatus, jqXHR){
                            $('#accountentry').html(data);
                            $('.right_lightbox').show();
                            $('.left-panel').removeClass('collapsed');
                            $('.l_menuicon_nav').removeClass('cross');
                        },
                        error:function(jqXHR, textStatus, errorThrown){
                        }
                    });
                } else {
                    $('.right_lightbox').hide();
                    $('.left-panel').addClass('collapsed');
                    $('.l_menuicon_nav').addClass('cross');
                    alert("Do not Edit Parent Account ( " + row.AccountName + " )");
                    return;
                }
            });

            //Print option
            $("#excelExport").click(function () {
                $("#treeGrid").jqxTreeGrid('exportData', 'xls');
            });
            $("#csvExport").click(function () {
                $("#treeGrid").jqxTreeGrid('exportData', 'csv');
            });
            $("#htmlExport").click(function () {
                $("#treeGrid").jqxTreeGrid('exportData', 'html');
            });

            $("#print").click(function () {
                $("#treeGrid").jqxTreeGrid('exportData', 'html');
            });

            $('#jqxbutton').click(function () {
                $("#treeGrid").jqxTreeGrid('expandAll');
                $('#jqxbutton').hide();
                $('#jqxbuttorenn').show();
            });

            $('#jqxbuttorenn').click(function () {
                $("#treeGrid").jqxTreeGrid('render');
                $('#jqxbutton').show();
                $('#jqxbuttorenn').hide();
            });
        }
    }

    function addAccount(){
        $.ajax({
            url:"<?php echo $this->basePath(); ?>/fa/index/accountentry",
            type:"post",
            //async:false,
            data:{"accountId":'0','type':'getLoadDetails'},
