    function bindGrid(gridData){
        var source = {
            localdata:gridData,
            async: false,
            dataType: "json",
            dataFields: [
                { name: 'EntryId', type: 'number' },
                { name: 'VoucherDate', type: 'string' },
                { name: 'VoucherNo', type: 'string' },
                { name: 'BookName', type: 'string' },
                { name: 'Approve', type: 'string' }
            ],
            id: 'EntryId'
        };
        var dataAdapter = new $.jqx.dataAdapter(source);
        $jqxGrid.jqxGrid({
            width: "100%",
            source: dataAdapter,
            autoheight: true,
            filterable: true,
            pagerButtonsCount: 6,
            showfilterrow: true,
            sortable: true,
            pageable:true,
            rowDetails: true,
            columns: [
                { text: 'EntryId', datafield: 'EntryId', hidden: true, filterable: false},
                { text: 'VoucherNo', datafield: 'VoucherNo', width:'20%'},
                { text: 'VoucherDate', dataField: 'VoucherDate', width:'20%'},
                { text: 'BookName', dataField: 'BookName', width:'30%'},//Approve
                { text: 'Approve', dataField: 'Approve', width:'15%'},
                { text: 'Action', sortable: false, filterable: false, align: 'left', width:'15%',
                    cellsrenderer: function (row) {
                        var editLink = '<a title="Edit" href="#" onclick="billEdit('+row+'); return false;" style="padding-left: 15px;"><i class="fa fa-pencil-square-o reg-icon"></i></a>';
                        //return editLink += "&nbsp;&nbsp;" + '<button style="background: transparent;" title="Delete" onclick="billDelete('+row+'); return false;"><i class="fa fa-trash-o reg-icon"></i></button>';
                        return editLink;
                        //return editLink += "&nbsp;&nbsp;" + '<a title="Report" href="#" onclick="billReport('+row+'); return false;"><i class="fa fa-file-text-o reg-icon-file"></i></a>';
                    }
                }
            ]
        });
        $jqxGrid.on('celldoubleclick', function (event){//cellclick
            // event arguments.
            var args = event.args;
            // row's bound index.
            var rowBoundIndex = args.rowindex;
            var dataField = args.datafield;
            var data = $jqxGrid.jqxGrid("getrowdata", rowBoundIndex);
            var iEntryId=data.EntryId;
            if(iEntryId!=0){
                window.location.replace(getBaseURL() + "fa/index/cashmanagement/" + iEntryId);
            }
        });
    }

    function billEdit(row) {
        var iEntryId = $jqxGrid.jqxGrid('getCellValue', row, 'EntryId');
        if(iEntryId!=0){
            window.location.replace(getBaseURL() + "fa/index/cashmanagement/" + iEntryId);
        }
    }

