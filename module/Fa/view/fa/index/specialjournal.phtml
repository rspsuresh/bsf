        if(spclJournal == 2){
            $('.ccType').hide();
        }else{
            $('.ccType').show();
        }
        bindAccountHeadAutoComplete(AccountHead);
        costCenterAutoComplete(ccList);

        $.ajax({
            url:"<?php echo $this->basePath(); ?>/fa/index/specialjournal",
            type:"post",
            //async:false,
            data:{'journalTypeChar':$('#specJournalTypeChar').val(),'specJournalType':$('#specJournalType').val(),'type':'getVoucher'},
