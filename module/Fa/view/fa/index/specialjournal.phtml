    function showAccounts(){
        $('#recurringType').html('');
        $('#recurringType').val('').select2();

        var spclJournal=$('#specJournalType').val();

        if(spclJournal == 1 || spclJournal==3)
            $('#divRecurring').show();
        else
            $('#divRecurring').hide();

        $.each(journalTypeList, function (i,o) {
            if(o.JournalId == spclJournal)
                $('#specJournalTypeChar').val(o.JournalType);
                 $('#specJournalTypeShort').val(o.ShortName);
        });

        $('#divAccount').fadeIn();

        if(spclJournal == 2){
            $("#accountTable").html('');
            $('#rowid').val(0);
            $("#divInvoice").show();
        }else{
            $("#accountTable").html('');
            $('#rowid').val(0);
            $("#divInvoice").hide();
            $("#divInvoice").find('input').val('');
            $("#invoiceType").val('').select2();
            $("#serviceGroup").val('').select2();
