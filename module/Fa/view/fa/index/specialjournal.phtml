    function loadRecurringTrans(){
        var specJournalType=$('#specJournalType').val();

        if(specJournalType != 1 && specJournalType != 3)
            return;

        $.ajax({
            url:"<?php echo $this->basePath(); ?>/fa/index/specialjournal",
            type:"post",
            //async:false,
            data:{'recurringType':$('#recurringType').val(),'type':'getRecurringTrans'},
            success:function(data, textStatus, jqXHR){
                var recurringTrans=JSON.parse(data);
                recurringTrans=recurringTrans['getRecurringTrans'];
                $("#accountTable").html('');
                $('#rowid').val(0);

                var template = $('#template-account').html();
                var sno= 0;

                if(recurringTrans.length !=0){
                    $('#divAccount').fadeIn();
                    $.each(recurringTrans, function (i,o) {
                        sno += 1;
                        $('#accountTable').append(template.replace(/__/g, '_' + sno));
                        $('#accountHead_'+sno).val(o.AccountName).attr('readonly',true);
                        $('#accountHeadId_'+sno).val(o.AccountId);
                        $('#subLedgerType_'+sno).val(o.SubLedgerTypeName).attr('readonly',true);
                        $('#subLedgerTypeId_'+sno).val(o.SubLedgerTypeId);
                        $('#subLedgerName_'+sno).val(o.SubLedgerName).attr('readonly',true);
                        $('#subLedgerId_'+sno).val(o.SubLedgerId);
                        $('#costCenterName_'+sno).val(o.CostCentreName).attr('readonly',true);
                        $('#costCenterId_'+sno).val(o.CostCentreId);
                        if(o.TransType == 'D'){
                            $('#debit_'+sno).val(sanitizeNumber(parseFloatVal(o.Debit,0),2,true));
                        } else if(o.TransType == 'C'){
                            $('#credit_'+sno).val(sanitizeNumber(parseFloatVal(o.Credit,0),2,true));
                        }
                        $('.DeleteTr_' + sno).show();
                    });
                }
                sno += 1;
                $('#accountTable').append(template.replace(/__/g, '_' + sno));
                $('#rowid').val(sno);

                bindAccountHeadAutoComplete(AccountHead);
                costCenterAutoComplete(ccList);
            },
            error:function(jqXHR, textStatus, errorThrown){
            }
        });

    }
