<script>
    var arr_ReqPo = <?php echo (isset($arr_ReqPo)) ? json_encode($arr_ReqPo) : '[]';?>;
    console.log(arr_ReqPo);
    function validateOnSubmit(){
        if ($('#RequestNo').val() == '') {
            alert('Please write ReqNo');
            return false;
        }

        if ($('#CostCentre').val() == '') {
            alert('Please select CostCentre');
            return false;
        }
        if ($('#PoNo').val() == '') {
            alert('Please select PONo');
            return false;
        }
        if ($('#Remarks').val() == '') {
            alert('Please type ur Remarks');
            return false;
        }

        $('#formWrapper').submit();

    }
    $('#CostCentre').on('change',function() {
        var target = $('#CostCentre').val();
        $.ajax({
            url: getBaseURL() + "mms/purchase/request",
            type: "post",
            async: false,
            data:{PId:target},
            success: function (data, textStatus, jqXHR) {
                var PODetails = JSON.parse(data);
                $('#PoNo').html('');
                var toAppend = '<option value=""></option>';
                if(PODetails.length>0) {
                    $.each(PODetails, function (i, o) {
                        toAppend += '<option value="' + o.PORegisterId + '">' + o.PONo + '</option>';
                    });
                    $('#PoNo').append(toAppend);
                    $('#PoNo').select2();
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert(textStatus + "-----" + errorThrown);
            }
        });
    });
</script>