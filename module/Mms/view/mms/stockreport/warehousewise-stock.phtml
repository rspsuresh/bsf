    var resourceSource = {
        localdata: [],
        dataType: "json",
        pagesize: 15,
        dataFields: [
            { name: 'Code', type: 'string' },
            { name: 'Resource', type: 'string' },
            { name: 'Unit', type: 'string' },
            { name: 'CostCentreName', type: 'string' },
            { name: 'ResourceId', type: 'string' },
            { name: 'ItemId', type: 'string' },
            { name: 'Total', type: 'string' }
        ]
    };
    var resourceAdapter = new $.jqx.dataAdapter(resourceSource);
    $jqxgrid.jqxGrid({
        width: '100%',
        pageable: true,
        rowsheight: 40,
        selectionMode: 'singleRow',
        pagerButtonsCount: 6,
        autoheight:true,
        source: resourceAdapter,
        editable: true,
		pagerMode: 'advanced',
		pagerHeight: 40,
		columnsresize: true,
		sortable: true,
		altrows: true,
		enabletooltips: true,
		showfilterrow: true,
		filterable: true,
		groupable: true,
		showstatusbar: true,
		statusbarheight: 35,
		showaggregates: true,
		autorowheight: true,
        columns: [
            { dataField: 'ResourceId', hidden: true},
            { dataField: 'ItemId', hidden: true},
            { text: 'Code', dataField: 'Code',width:'15%', editable:false},
            { text: 'Resource', dataField: 'Resource',width:'20%', editable:false},
            { text: 'Unit', dataField: 'Unit',width:'20%', editable:false},
            { text: 'CostCentreName', dataField: 'CostCentreName',width:'30%', editable:false},
            { text: 'Total', dataField: 'Total',width:'15%', editable:false}
        ]
    });

    $(function () {

        $jqxgrid.jqxGrid('showgroupsheader', false);
        //Print option
        $("#excelExport").click(function () {
            $jqxgrid.jqxGrid('exportdata', 'xls', 'jqxGrid');
        });
        $("#csvExport").click(function () {
            $jqxgrid.jqxGrid('exportdata', 'csv', 'jqxGrid');
        });
        $("#htmlExport").click(function () {
            $jqxgrid.jqxGrid('exportdata', 'html', 'jqxGrid');
        });
        $("#print").click(function () {
            var gridContent = $jqxgrid.jqxGrid('exportdata', 'html');
            var newWindow = window.open('', '', 'width=800, height=500'),
                document = newWindow.document.open(),
                pageContent =
                    '<!DOCTYPE html>\n' +
                    '<html>\n' +
                    '<head>\n' +
                    '<meta charset="utf-8" />\n' +
                    '<title> WareHousewise-Stock </title>\n' +
                    '<h1> WareHousewise-Stock </h1>\n' +
                    '</head>\n' +
                    '<body>\n' + gridContent + '\n</body>\n</html>';
            document.write(pageContent);
            document.close();
            newWindow.print();
        });
    });


    function bindRequests() {
        var warehouseId = $('#warehouse').val();
        $('.loading_area').show();
        $.ajax({
            url:getBaseURL()+'mms/stockreport/warehousewise-stock',
            type:"post",
            data:"WareHouseId="+warehouseId,
            dataType:"json",
            success:function(data, textStatus, jqXHR){
                if(jqXHR.status == 200) {
                    $jqxgrid.jqxGrid('clear');
                    renderRequestResources(data['resource'], data['requests']);
                }
                $('.loading_area').hide();
            }, error: function (jqXHR, textStatus, errorThrown) {
                $('.loading_area').hide();
            }
        });
    }
    function renderRequestResources(data,data1 ) {
        var tmpLocalData = [];
        var $jqxgrid = $("#jqxgrid");
        var resourceSource = {
            localdata: [],
            dataType: "json",
            dataFields: [
                { name: 'Code', type: 'string' },
                { name: 'Resource', type: 'string' },
                { name: 'Unit', type: 'string' },
                { name: 'ResourceId', type: 'string' },
                { name: 'ItemId', type: 'string' },
                { name: 'Total', type: 'string' }
            ]
        };
        var gridColumns=[
            { dataField: 'ResourceId', hidden: true},
            { dataField: 'ItemId', hidden: true},
            { text: 'Code', dataField: 'Code',width:'35%', editable:false},
            { text: 'Resource', dataField: 'Resource',width:'15%', editable:false},
            { text: 'Unit', dataField: 'Unit',width:'20%', editable:false}
        ];

        $.each(data1, function(i,o){
            resourceSource.dataFields.push({
                name: o.CostCentreName, type: 'string'
            });
            gridColumns.push({
                text: o.CostCentreName, dataField: o.CostCentreName, width:'15%', editable:false
            });
        });

        gridColumns.push({
            text: 'Total', dataField: 'Total',width:'25%', editable:false
        });
        var resourceAdapter = new $.jqx.dataAdapter(resourceSource);
         $jqxgrid.jqxGrid({
            width: '100%',
            pageable: true,
            rowsheight: 40,
            selectionMode: 'singleRow',
            pagerButtonsCount: 6,
            autoheight:true,
            source: resourceAdapter,
            editable: true,
            columns: gridColumns,
			pagerMode: 'advanced',
			pagerHeight: 40,
			columnsresize: true,
			sortable: true,
			altrows: true,
			enabletooltips: true,
			showfilterrow: true,
			filterable: true,
			groupable: true,
			showstatusbar: true,
			statusbarheight: 35,
			showaggregates: true,
			autorowheight: true
			});

        resourceSource.localdata = data;
        resourceAdapter.dataBind();
    }
    </script>