<script type="text/javascript">
    $(document).ready(function (){
        $.ajax({
            url:getBaseURL()+"mms/transfer/display-register",
            type:"post",
            data:"mode=first",
            dataType:"json",
            success:function(data, textStatus, jqXHR){
                //alert(JSON.stringify(data))
				var $treeGrid = $("#subGrid");
                var source =
                {
                    dataFields: [
						{ name: 'TVRegisterId', type: 'string'},
                        { name: 'TransferNo', type: 'string' },
                        { name: 'TransferDate', type: 'date', format: 'dd-mm-yyyy' },
                        { name: 'FromCompany', type: 'string' },
                        { name: 'FromCostCentre', type: 'string' },
                        { name: 'ToCompany', type: 'string' },
                        { name: 'ToCostCentre', type: 'string' },
                        { name: 'Approve', type: 'string' }

                    ],
                    localdata:data,
                    id: 'TVRegisterId',
                    datatype: "json",
                    async: false

                };

                var employeesAdapter = new $.jqx.dataAdapter(source);

                // creage jqxgrid
                $("#subGrid").jqxGrid({
                    width: '100%',
                    autoheight:true,
                    source: employeesAdapter,
                    sortable: true,
                    filterable: true,
                    pageable: true,
					showfilterrow: true,
                    ready: function () {
                        //$("#subGrid").jqxGrid('showrowdetails', 1);
                    },
                    columns: [

                        {text: 'TVRegisterId', datafield: 'TVRegisterId', hidden: true, filterable: false},
						{ text: 'Transfer No', dataField: 'TransferNo' },
                        { text: 'Transfer Date', dataField: 'TransferDate',filtertype: 'date',cellsformat: 'dd-MM-yyyy'},
                        { text: 'From Company', dataField: 'FromCompany' },
                        { text: 'From CostCentre', dataField: 'FromCostCentre' },
                        { text: 'To Company', dataField: 'ToCompany' },
                        { text: 'To CostCentre', dataField: 'ToCostCentre' },
                        { text: 'Approve', dataField: 'Approve' },
						{ text: 'Action', sortable: false, filterable: false, cellsalign: 'center',width:'12%',
						cellsrenderer: function (row) {
                            var rowData = $("#subGrid").jqxGrid('getrowdata', row);
                            var TVRegisterId = $treeGrid.jqxGrid('getCellValue', row, 'TVRegisterId');
                            var Approve = $treeGrid.jqxGrid('getCellValue', row, 'Approve');
                            if(Approve == "Yes" || Approve == "Partial") {
                                var editLink = '<a title="Detailed" href="' + getBaseURL() + 'mms/transfer/detailed/' + rowData.uid + '" style="margin-left: 12px; margin-top:8px;"><i class="fa fa-paper-plane reg-icon"></i></a>';
                                return editLink + "&nbsp;&nbsp;" + '<a title="Report" href="' + getBaseURL() + 'mms/transfer/transdispatch-report/' + TVRegisterId + '" style="margin-left: 8px;"><i class="fa fa-file-text-o reg-icon-file"></i></a>';
                            }
                            else {
                                var editLink = '<a href="' + getBaseURL() + 'mms/transfer/tventry/0/' + TVRegisterId + '" "javascript:void(0);" title="Edit" onclick="transedit(' + TVRegisterId + ',' + row + ');return false;""><i class="fa fa-pencil-square-o reg-icon"></i></a>' + //<a title="Edit" href="'+ getBaseURL() + 'mms/transfer/tventry/'+TVRegisterId+'" style="padding-left: 15px; margin-top:8px;">
                                    "&nbsp;&nbsp;" + '<a href="' + getBaseURL() + 'mms/transfer/deleteTransfer/' + TVRegisterId + '" "javascript:void(0);" title="Delete" onclick="transdelete(' + TVRegisterId + ',' + row + ');return false;""><i class="fa fa-trash-o reg-icon"></i></a>' +
                                    '<a title="Detailed" href="' + getBaseURL() + 'mms/transfer/detailed/' + rowData.uid + '" style="margin-left: 12px; margin-top:8px;"><i class="fa fa-paper-plane reg-icon"></i></a>';
                                return editLink + "&nbsp;&nbsp;" + '<a title="Report" href="' + getBaseURL() + 'mms/transfer/transdispatch-report/' + TVRegisterId + '" style="margin-left: 8px;"><i class="fa fa-file-text-o reg-icon-file"></i></a>';
                            }
						}
					}

                    ]
                });
                // $("#subGrid").on('rowselect', function(event){
                    //event arguments.
                    // var args = event.args;
                    //row's bound index.
                    // var rowBoundIndex = args.rowindex;
                    //row's data. The row's data object or null(when all rows are being selected or unselected with a single action). If you have a datafield called "firstName", to access the row's firstName, use var firstName = rowData.firstName;
                    // var rowData = args.row;
                    // location.replace("detailed/"+rowData.uid);
                // });
            },
            error:function(jqXHR, textStatus, errorThrown){
                alert(textStatus+"-----"+errorThrown);
            }
        });
    });
    function transdelete(tvregid,row) {
        var rowData = $("#subGrid").jqxGrid('getrowdata', row);

        if(rowData['Approve'] == "Yes" || rowData['Approve'] == "Partial")
        {
            alert("Can't Delete Already Approved");
            return;
        }

        var val = confirm("Do you want to delete this transfer Despatch ?");
        if(val==true) {
            location.replace('deleteTransfer/'+tvregid);
        }
    }
    function transedit(tvregid,row) {
        var rowData = $("#subGrid").jqxGrid('getrowdata', row);

        if (rowData['Approve'] == "Yes" || rowData['Approve'] == "Partial") {
            alert("Can't Edit Already Approved");
            return;
        }
        location.replace('tventry/0/'+tvregid);
    }


</script>