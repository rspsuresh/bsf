<script type="text/javascript">
    $(function() {
        $('.workgroup-link').on('click', function () {
            var rowid = $(this).attr('id').split('_')[1],
                wgid = $('#pworkgroupid_'+rowid).val();
            $('#pworkgroupid').val(wgid);
            $('#wg-overlay').show();
            $('#iow-overlay').hide();
            $('#iow-savebtn').show();
            bindiowlist(wgid);
        });

        bindwgSortablefn();
    });

    function bindiowlist(wgid) {
        $('.loading_area').show();
        $('#iowbody').html('');
        $('#iowrowid').val(0);
        $.ajax({
            url: getBaseURL() + 'project/main/projectiowsortorder',
            type: 'POST',
            data: {'type': 'getiows', 'ProjectId': isNullCheck($('#projectId').val(),'number'), 'PWorkGroupId': wgid},
            success: function (data,status,xhr) {
                var arr_iowlist = JSON.parse(data);
                var rowid = 0;
                var template = $('#iow-template').html();
                $.each(arr_iowlist, function (i,o) {
                    rowid++;
                    $('#iowbody').append(template.replace(/__/g, '_'+rowid)
                            .replace(/\{\{ProjectIOWId\}\}/, o.ProjectIOWId)
                            .replace(/\{\{SerialNo\}\}/, o.SerialNo)
                            .replace(/\{\{Specification\}\}/, o.Specification)
                            .replace(/\{\{SortId\}\}/, o.SortId)
                    );
                });
                $('#iowrowid').val(rowid);
                bindMixSortablefn();
                $('.loading_area').hide();
            },
            error: function (xhr, status,errorThrown) {
                $('.loading_area').hide();
            }
        });
    }

    function cancelEdit() {
        $('#iowbody').html('');
        $('#wg-overlay').hide();
        $('#iow-overlay').show();
        $('#iow-savebtn').hide();
    }

     function submitForm(isWGForm) {
         $('.loading_area').show();
         var $form = $('#iow-form');
         if(typeof isWGForm != 'undefined' && isWGForm) {
             $form = $('#wg-form');
         }

         $.ajax({
            url: getBaseURL() + 'project/main/projectiowsortorder',
             type: 'POST',
             data: $form.serialize(),
             success: function (data,status,xhr) {
                 $('.loading_area').hide();
             },
             error: function (xhr, status,errorThrown) {
                 $('.loading_area').hide();
             }
         });
         $('#iowbody').html('');
         $('#wg-overlay').hide();
         $('#iow-overlay').show();
         $('#iow-savebtn').hide();
     }

    $(document).ready(function() {
        $(".fixTable").tableHeadFixer();
    });

    function ChangeProject() {
        var iProjectId = isNullCheck($('#projectId').val(),'number');
        window.location.href = getBaseURL() + "project/main/projectiowsortorder/" + iProjectId;
    }

    function bindMixSortablefn(reset) {
        var $rBody = $('#iowbody');
        $.each($rBody, function(i, obj){
            if ($(this).parent('table')[0].id.indexOf('__') != -1) {
                $rBody.splice(i, 1);
            }
        });
        var $sRTable = $rBody.find('tr');
        if (typeof reset !== 'undefined' && reset === true) {
            $sRTable.unbind('click', 'dblclick', 'select', 'sortable');
            $rBody.unbind('sortable');
        }
        $sRTable.on( 'dblclick', function () {
            var $this = $(this);
            if ($this.hasClass('selected') == true) $this.toggleClass('selected', false);
            else $this.toggleClass('selected', true);
        });
        $sRTable.on( 'click', function () {
            var $this = $(this);
            $this.closest("tr").siblings().removeClass("highlighted");
            $this.toggleClass('highlighted',true);
        });
        $sRTable.on( 'select', function () {
            var $this = $(this);
            $this.closest("tr").siblings().removeClass("highlighted");
            $this.toggleClass('highlighted',true);
        });
        $rBody.sortable({
            helper: fixHelperModified,
            stop: updateIndex,
            axis: 'y',
            distance: 40,
            update: function( event, ui ) {
                SortOrder();
            }
        });
    }

    function bindwgSortablefn(reset) {
        var $rBody = $('#wgbody');
        $.each($rBody, function(i, obj){
            if ($(this).parent('table')[0].id.indexOf('__') != -1) {
                $rBody.splice(i, 1);
            }
        });
        var $sRTable = $rBody.find('tr');
        if (typeof reset !== 'undefined' && reset === true) {
            $sRTable.unbind('click', 'dblclick', 'select', 'sortable');
            $rBody.unbind('sortable');
        }
        $sRTable.on( 'dblclick', function () {
            var $this = $(this);
            if ($this.hasClass('selected') == true) $this.toggleClass('selected', false);
            else $this.toggleClass('selected', true);
        });
        $sRTable.on( 'click', function () {
            var $this = $(this);
            $this.closest("tr").siblings().removeClass("highlighted");
            $this.toggleClass('highlighted',true);
        });
        $sRTable.on( 'select', function () {
            var $this = $(this);
            $this.closest("tr").siblings().removeClass("highlighted");
            $this.toggleClass('highlighted',true);
        });
        $rBody.sortable({
            helper: fixHelperModified,
            stop: updateIndex,
            axis: 'y',
            distance: 40,
            update: function( event, ui ) {
                SortOrderW();
            }
        });
    }

    var fixHelperModified = function(e, tr) {
            var $originals = tr.children();
            var $helper = tr.clone();
            $helper.children().each(function(index) {
                $(this).width($originals.eq(index).width())
            });
            return $helper;
        },
        updateIndex = function(e, ui) {
            $('td.index', ui.item.parent()).each(function (i) {
                $(this).html(i + 1);
            });
        };

    function SortOrder() {
        var rows = $('tr[id*=iowrow_]');
        var iSortId=1;
        $.each(rows, function() {
            var id = $(this)[0].id;
            var irow = id.split("_")[1];
            $('#sortid_' + irow).val(iSortId);
            iSortId = + iSortId+1;
        });
    }

    function SortOrderW() {
        var rows = $('tr[id*=wgrow_]');
        var iSortId=1;
        $.each(rows, function() {
            var id = $(this)[0].id;
            var irow = id.split("_")[1];
            $('#wsortid_' + irow).val(iSortId);
            iSortId = + iSortId+1;
        });
    }

    function sortChangeW(keyid) {
        var rows = $('tr[id*=wgrow_]'),
            key= keyid.split("_")[1],
            icSortId = parseInt(isNullCheck($('#wsortid_'+key).val(),'number')),
            iSortId=1;
        $.each(rows, function() {
            var id = $(this)[0].id,
                irow = id.split("_")[1],
                iOldSortId = parseInt(isNullCheck($('#wsortid_' + irow).val(),'number'));
            if (irow != key) {
                $('#wsortid_' + irow).val(iSortId);
                iSortId = +iSortId + 1;
            }
            if (icSortId == iSortId) iSortId = +iSortId + 1;
        });
        sortTableW();
    }

    function sortChange(keyid) {
        var rows = $('tr[id*=iowrow_]'),
            key= keyid.split("_")[1],
            icSortId = parseInt(isNullCheck($('#sortid_'+key).val(),'number')),
            iSortId=1;
        $.each(rows, function() {
            var id = $(this)[0].id,
                irow = id.split("_")[1],
                iOldSortId = parseInt(isNullCheck($('#sortid_' + irow).val(),'number'));
            if (irow != key) {
                $('#sortid_' + irow).val(iSortId);
                iSortId = +iSortId + 1;
            }
            if (icSortId == iSortId) iSortId = +iSortId + 1;
        });
        sortTableW();
    }

    function sortTable(){
        var rows = $('#iowtable tbody  tr').get();
        rows.sort(function(a, b) {
            var A = parseInt(isNullCheck($('#' + $(a).children('td').eq(2).find("input").attr("id")).val(),'number'));
            var B = parseInt(isNullCheck($('#' + $(b).children('td').eq(2).find("input").attr("id")).val(),'number'));

            if(A < B) {
                return -1;
            }

            if(A > B) {
                return 1;
            }

            return 0;

        });

        $.each(rows, function(index, row) {
            $('#iowtable').children('tbody').append(row);
        });
    }


    function sortTableW(){
        var rows = $('#wgtable tbody  tr').get();
        rows.sort(function(a, b) {
            var A = parseInt(isNullCheck($('#' + $(a).children('td').eq(2).find("input").attr("id")).val(),'number'));
