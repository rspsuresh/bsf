<script type="text/javascript">
    var datafields = [
        { name: "QuotationId", type: "number" },
        { name: "SerialNo", type: "string" },
        { name: "RefSerialNo", type: "string" },
        { name: "Specification", type: "string" },
        { name: "UnitName", type: "number" }
    ];
    var source = {
        localdata: [],
        datatype: "json",
        pagesize: 15,
        datafields: datafields
    };

    var cols = [
        { text: 'Serial No.', datafield: 'SerialNo', pinned: true ,width:"10%" },
        { text: 'Specification', datafield: 'Specification', align: 'center', pinned: true ,width:"12%" },
        { text: 'Unit Name', datafield: 'UnitName', align: 'center', pinned: true ,width:"8%" }
    ];

    var dataAdapter = new $.jqx.dataAdapter(source);
    var $jqxgrid = $('#jqxgrid');
    var jqxGridProp = {
        width: "100%",
        source: dataAdapter,
        pageable: true,
        pagerMode: 'advanced',
        pagerHeight: 40,
        columnsresize: true,
        autoheight: true,
        rowsheight:40,
        sortable: true,
        altrows: true,
        enabletooltips: true,
        showfilterrow: true,
        filterable: true,
        groupable: true,
        showstatusbar: true,
        statusbarheight: 35,
        showAggregates: true,
        autorowheight: true,
        columns: [],
        columngroups: []
    };

    $(document).ready(function () {
        $(".single_dropdown").select2({
            placeholder: "",
            allowClear: true
        });

        $('#TenderEnquiryId').on('change', function(){
            var TenderEnquiryId = isNullCheck($(this).val(), 'number');
            if(TenderEnquiryId ==  '' || TenderEnquiryId == 0)
                return;

            $('.loading_area').show();
            $.ajax({
                url: getBaseURL() + 'project/report/quotationreport',
                data: {'TenderEnquiryId' : TenderEnquiryId},
                type: 'POST',
                success: function(data, status, xhr) {
                    if(xhr.status == 200)
                        bindGridData(JSON.parse(data));
                    else
                        bindGridData(null);

                    $('.loading_area').hide();
                },
                error: function (xhr, status, error) {
                    bindGridData(null);
                    $('.loading_area').hide();
                }
            });
        });

        $jqxgrid.jqxGrid(jqxGridProp);

        //Print option
        $("#excelExport").click(function () {
            $("#jqxgrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
        });
        $("#csvExport").click(function () {
            $("#jqxgrid").jqxGrid('exportdata', 'csv', 'jqxGrid');
        });
        $("#htmlExport").click(function () {
            $("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid');
        });

        $("#print").click(function () {
            var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html');
            var newWindow = window.open('', '', 'width=800, height=500'),
                document = newWindow.document.open(),
                pageContent =
                    '<!DOCTYPE html>\n' +
                    '<html>\n' +
                    '<head>\n' +
                    '<meta charset="utf-8" />\n' +
                    '<title>Quotation Report</title>\n' +
                    '<h1>Quotation Report</h1>\n' +
                    '</head>\n' +
                    '<body>\n' + gridContent + '\n</body>\n</html>';
            document.write(pageContent);
            document.close();
            newWindow.print();
        });
    });

    function bindGridData(data) {
        var id = 0;
        var qid = 0;
        source.datafields = datafields;
        source.localdata = [];
        jqxGridProp.columns = [
            { text: 'Serial No.', datafield: 'SerialNo', pinned: true ,width:"10%" },
            { text: 'Specification', datafield: 'Specification', align: 'center', pinned: true ,width:"12%" },
            { text: 'Unit Name', datafield: 'UnitName', align: 'center', pinned: true ,width:"8%" }
        ];
        jqxGridProp.columngroups = [];
        if(data != null && data.length != 0) {
            var i = 0;
            var prev_i = 0;
            $.each(data, function (j, o) {
                if (qid != o.QuotationId) {
                    qid = o.QuotationId;
                    id++;
                    i++;
                }

                if(prev_i != i) {
                    source.datafields.push(
                        {name: "Rate-" + i, type: "number"},
                        {name: "Qty-" + i, type: "number"},
                        {name: "Amount-" + i, type: "number"}
                    );
                    jqxGridProp.columns.push({
                        text: 'Qty',
                        datafield: 'Qty-' + i,
                        columnGroup: 'Quotation-' + id,
                        width: "8%",
                        align: 'right',
                        cellsalign: 'right',
                        cellsformat: 'd2'
                    });
                    jqxGridProp.columns.push({
                        text: 'Rate',
                        datafield: 'Rate-' + i,
                        columnGroup: 'Quotation-' + id,
                        width: "12%",
                        align: 'right',
                        cellsalign: 'right',
                        cellsformat: 'd2'
                    });
                    jqxGridProp.columns.push({
                        text: 'Amount',
                        datafield: 'Amount-' + i,
                        columnGroup: 'Quotation-' + id,
                        width: "15%",
                        align: 'right',
                        cellsalign: 'right',
                        cellsformat: 'd2'
                    });
                    jqxGridProp.columngroups.push({text: 'Quotation-' + id, align: 'center', name: 'Quotation-' + id});
                }
                prev_i = i;

                var tmp_obj = {
                    'SerialNo': o.SerialNo,
                    'RefSerialNo': o.RefSerialNo,
                    'Specification': o.Specification,
                    'QuotationId': o.QuotationId,
                    'QuotationTransId': o.QuotationTransId
                };
                tmp_obj['Rate-' + i] = o.Rate;
                tmp_obj['Qty-' + i] = o.Qty;
                tmp_obj['Amount-' + i] = o.Amount;
                source.localdata.push(tmp_obj);
            });
        }
        jqxGridProp.source = new $.jqx.dataAdapter(source);
        $jqxgrid.jqxGrid(jqxGridProp);
    }
</script>