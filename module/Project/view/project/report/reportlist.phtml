            $('#itemwisewbsabs-link').attr('href', getBaseURL() + 'project/report/itemwisewbs-report');
            $('#wbsalloted-link').attr('href', getBaseURL() + 'project/report/wbsalloted-report');
            $('#planqty-link').attr('href', getBaseURL() + 'project/report/planquantity-report');
            $('#revisionreport-link').attr('href', getBaseURL() + 'project/report/revisionreport');
            $('#resourcedetail-link').attr('href', getBaseURL() + 'project/report/resourcedetail-report');
            $('#schvscomp-link').attr('href', getBaseURL() + 'project/report/schedulevscompletion');
            $('#projprogress-link').attr('href', getBaseURL() + 'project/report/projectprogress');
            $('#resourcereq-link').attr('href', getBaseURL() + 'project/report/resourcerequirement');
            $('#projcashflow-link').attr('href', getBaseURL() + 'project/report/projectedcashflow');
            $('#slippage-link').attr('href', getBaseURL() + 'project/report/slippagereport');
            $('#criticalact-link').attr('href', getBaseURL() + 'project/report/criticalactivity');
        } else {
            $('#projsum-link').attr('href', getBaseURL() + 'project/report/projectsummary/'+ projectid);
            $('#planqty-link').attr('href', getBaseURL() + 'project/report/planquantity-report/'+ projectid);
            $('#schvscomp-link').attr('href', getBaseURL() + 'project/report/schedulevscompletion/'+ projectid);
            $('#projprogress-link').attr('href', getBaseURL() + 'project/report/projectprogress/'+ projectid);
            $('#resourcereq-link').attr('href', getBaseURL() + 'project/report/resourcerequirement/'+ projectid);
            $('#projcashflow-link').attr('href', getBaseURL() + 'project/report/projectedcashflow/'+ projectid);

            if(type == 'B') {
                $('#boqabs-link').attr('href', getBaseURL() + 'project/rfc/projboq/' + projectid + '/B');
                $('#wbsitemabs-link').attr('href', getBaseURL() + 'project/report/wbsitemabstract/'+ projectid +'/B');
