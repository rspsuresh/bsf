                $('#slippage-link').attr('href', getBaseURL() + 'project/report/slippagereport/'+ projectid +'/B');
                $('#criticalact-link').attr('href', getBaseURL() + 'project/report/criticalactivity/'+ projectid +'/B');
            } else if(type == 'P') {
                $('#boqabs-link').attr('href', getBaseURL() + 'project/rfc/projboqplan/' + projectid);
                $('#wbsitemabs-link').attr('href', getBaseURL() + 'project/report/wbsitemabstract/'+ projectid +'/P');
                $('#itemwisewbsabs-link').attr('href', getBaseURL() + 'project/report/itemwisewbs-report/'+ projectid +'/P');
