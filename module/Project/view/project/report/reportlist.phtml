<script type="text/javascript">
    (function () {
        var $projectId = $('#project_id'),
            $revType = $('#revtype');

        $('.navigate-form').on('click', function  () {
           var action = $(this).attr('data-href'),
               iProjectId = parseInt(isNullCheck($projectId.val(),'number')),
               sType = isNullCheck($revType.val(),'string');

            if (iProjectId !=0) window.location.href = action + '/' + iProjectId + "/" + sType;
            else window.location.href = action;
        });
        $('#project_id').on('change', function () {
            bindHrefs()
        });
        $('#revtype').on('change', function() {
            bindHrefs()
        });
        bindHrefs();
    })();

    function bindHrefs () {
        var projectid = isNullCheck($('#project_id').val(), 'number');
        var type = isNullCheck($('#revtype').val(), 'string');

        if(projectid == 0 || (type != 'P' && type != 'B')) {
            $('#projsum-link').attr('href', getBaseURL() + 'project/report/projectsummary');
            $('#boqabs-link').attr('href', getBaseURL() + 'project/rfc/projboq-print');
