<script type="text/javascript">
    var $grid = $("#grid");
    $(function () {
        var source = {
            async: false,
            dataType: "json",
            dataFields: [
                { name: 'WorkGroupId', type: 'number' },
                { name: 'SerialNo',type: 'string'},
                { name: 'WorkGroupName',type: 'string'}
            ],
            id: 'ResourceId',
            url: getBaseURL() + "project/report/getworkgrouplist"
        };

        var dataAdapter = new $.jqx.dataAdapter(source);

        $grid.jqxGrid({
            width: "100%",
            source: dataAdapter,
            height:"490",
            filterable: true,
            sortable: true,
            pageable:true,
            columns: [
                { text: 'SerialNo', dataField: 'SerialNo'},
                { text: 'WorkGroupName', dataField: 'WorkGroupName'},
            ]
        });
    });

    function  printTable() {
        $("#grid").jqxGrid('exportdata', 'pdf', 'WorkGroupList');
    }

    //Print option
    $("#excelExport").click(function () {
        $("#grid").jqxGrid('exportdata', 'xls', 'jqxGrid');
    });
    $("#csvExport").click(function () {
        $("#grid").jqxGrid('exportdata', 'csv', 'jqxGrid');
    });
    $("#htmlExport").click(function () {
        $("#grid").jqxGrid('exportdata', 'html', 'jqxGrid');
    });

    $("#print").click(function () {
        var gridContent = $("#grid").jqxGrid('exportdata', 'html');
        //var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);
        var newWindow = window.open('', '', 'width=800, height=500'),
            document = newWindow.document.open(),
            pageContent =
                '<!DOCTYPE html>\n' +
                '<html>\n' +
                '<head>\n' +
                '<meta charset="utf-8" />\n' +
                '<title>WorkGroup List</title>\n' +
                '<h1>WorkGroup List</h1>\n' +
                '</head>\n' +
                '<body>\n' + gridContent + '\n</body>\n</html>';
        document.write(pageContent);
        document.close();
        newWindow.print();

        /*$("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);*/
    });

</script>