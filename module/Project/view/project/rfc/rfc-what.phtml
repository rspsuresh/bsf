}

function changeAction() {

    if ($('#project_name').val() == "") {
        showError($('#project_name'), 'Select Project');
        $('#ltype').attr('data-slide-to', 2);
        $('#project_name').focus();
        return false;
    }

    if ($('#type_name').val() == "") {
        showError($('#type_name'), 'Select Project type');
        $('#ltype').attr('data-slide-to', 2);
        $('#type_name').focus();
        return false;
    }

    var pName = $('#project_name option:selected').html(),
        tName = $('#type_name option:selected').html(),
        iActionId = $('#actionid').val(),
        sHead ="";

    if (iActionId ==1) sHead = "Add New BOQ Items";
    else if (iActionId ==2) sHead = "New Plan";
    else if (iActionId ==3) sHead = "Resource Rate";
    else if (iActionId ==4) sHead = "Other Cost";
    else if (iActionId ==5) sHead = "Schedule";
    else if (iActionId ==6) sHead = "WBS Schedule";
    else if (iActionId ==8) sHead = "Qty Changes in Existing BOQ";
    else if (iActionId ==9) sHead = "Qty Changes in Existing Plan";


    $('#li1').html(pName);
    $('#li2').html(tName);
    $('#li3').html(sHead);
    $('#li4').html('');

    $('#li1').show();
    $('#li2').show();
    $('#li1').removeClass('active');
    if (sHead=="") {
        $('#li2').addClass('active');
        $('#li3').hide();
    }
    else {
        $('#li3').show();
        $('#li2').removeClass('active');
        $('#li3').addClass('active');
    }
    $('#li4').hide();
}

