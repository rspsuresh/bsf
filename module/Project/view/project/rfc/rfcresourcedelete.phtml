            if (event.args.value) {
                $("#grid").jqxGrid('selectrow', event.args.rowindex);
            }
            else {
                $("#grid").jqxGrid('unselectrow', event.args.rowindex);
            }
        });

        if ($("#grid").jqxGrid('getrows').length === 0)
            $('#nextbut').hide();
        else
            $('#nextbut').show();
    });

    function submitForm() {
        $('form').submit();
    }

    function backresource()
    {
        $('#edit-content').hide();
        $('#delete-list').show();
        $('#next-btn').show();
        $('#submit-btn').hide();
        $('#back-btn').hide();
    }


    function nextresource() {

        var rows = $("#grid").jqxGrid('getrows');
        var id = "";
        for (var m = 0; m < rows.length; m++)
        {
            var row = $("#grid").jqxGrid('getrowdata', m);
            if (row.available==true) {
                id=id + row.ResourceId + ',';
            }
        }
        if (id.length !=0) {

            id = id.slice(0,-1);

            $.post(getBaseURL() + 'project/rfc/GetResourceDeletelist', {ids: id}, function (data) {
                var obj = jQuery.parseJSON(data)
                var iRowId = $('#rowid').val();
                var stabelrow = '#sample12';

                for (i = 1; i <= iRowId; i++)
                {
                    if (i!=1) {
                        $('#rowid_' + i).remove();
                    }
                }
                iRowId=0;
                $('#rowid').val(iRowId);

                for (i = 0; i < obj.length; i++)
                {
                    iRowId = iRowId+1;
                    if (iRowId!=1) {
                        var sStr=  $("#dummy tbody").html();

                        sStr = sStr.replace(/__1/g, '_1');
                        sStr = sStr.replace(/_1/g, '_' + iRowId);

                        $(sStr).insertBefore(stabelrow + " tbody tr:last");
                    }

                    $('#resid_'+iRowId).val(obj[i]['ResourceId']);
                    $('#code_'+iRowId).val(obj[i]['Code']);
                    $('#type_'+iRowId).val(obj[i]['TypeName']);
                    $('#group_'+iRowId).val(obj[i]['ResourceGroupName']);
                    $('#resname_'+iRowId).val(obj[i]['ResourceName']);

                    $('#rowid').val(iRowId);
                }
            });

            $('#delete-list').hide();
            $('#edit-content').show();
            $('#next-btn').hide();
            $('#submit-btn').show();
            $('#back-btn').show();
        }
        else
        {
            alert("Select Resource")
        }
    }

    function inputFocus(i){
        if(i.value==i.defaultValue){ i.value=""; i.style.color="#000"; }
    }
    function inputBlur(i){
        if(i.value==""){ i.value=i.defaultValue; i.style.color="#888"; }
    }

    function entryValidate() {
        var isValid = true;
        var $narration = $('#narration');
        if ($narration.val().length==0 ||  $narration.val().trim() == "Why do you delete this?") {
            isValid = false;
            $('#narration').addClass('error').attr('data-original-title', 'Required').attr('data-toggle', 'tooltip');
            $narration.focus();
        }
        return isValid;
    }
</script>
