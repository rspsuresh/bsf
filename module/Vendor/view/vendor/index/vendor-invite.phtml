<script>
	$(function() {
		$(window).keydown(function(event){
			if(event.keyCode == 13) {
			  event.preventDefault();
			  return false;
			}
			});
			  
			$('#current_emails').text($('#example_email').val());
			$('#example_email').multiple_emails();
			$('#example_email').change( function(){
				$('#current_emails').text($(this).val());
			});
			$frmPost = $('#frmPost');
			$frmPost.on('submit', function () {
				var $emailIds = $('.email_name');					
				$.each($emailIds, function() {
					$frmPost.append('<input type="hidden" name="emails[]" value="'+$(this).html()+'"/>');
				});
				
			});
	});
</script>	

