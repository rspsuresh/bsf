function changeCPeriodType(val) {
    if (val=="None") { $('#cpduration').val(''); $('#cpduration').prop('disabled',true); }
    else $('#cpduration').prop('disabled',false);
}
function changeCGraceType(val) {
    if (val=="None") { $('#cgduration').val(''); $('#cgduration').prop('disabled',true); }
    else $('#cgduration').prop('disabled',false);
}
function checkMonthDay(val) {
    if (parseInt(val) ==0) $('#cfmonth').val(1);
    else if (parseInt(val) >31)$('#cfmonth').val(31);
}
function changeCFrequencyType(val) {
    $('#cfday').hide();
    $('#divcfweek').hide();
    $('#cfmonth').hide();
    if (val=="None") {
        $('#cfduration').val('');
        $('#cfduration').prop('disabled',true);
        $('#divcfrequency').css({opacity : 0});
        $("label[for='lcfrequency']").text("");
    }
    else {
        $('#cfduration').prop('disabled',false);
        $('#divcfrequency').css({opacity : 1});

        $("label[for='lcfrequency']").text(val);
        if (val=="Day") {
            $('#cfday').show();
            $("label[for='lcfrequency']").text('Time of the Day');
