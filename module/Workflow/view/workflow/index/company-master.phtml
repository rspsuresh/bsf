            var url = "/samplePro/public/application/index/GetCompanyM";
            var source =
            {
                datatype: "json",
                datafields: [
                    { name: 'CompanyId', type: 'int' },
                    { name: 'CompanyName', type: 'string' }
                ],
                id: "id",
                url: url
            };

            //Select LogId,RoleName,LogDescription from LogMaster
            var dataAdapter = new $.jqx.dataAdapter(source);
            $("#jqxgrid").jqxGrid(
                {
                    width: 850,
                    source: dataAdapter,
                    //columnsresize: true,
                    filterable: true,
                    columns: [
                        //{ text: 'CompanyId', datafield: 'CompanyId', width: 0 },
                        { text: 'CompanyName', datafield: 'CompanyName', width: 250 },
                    ]
                });
