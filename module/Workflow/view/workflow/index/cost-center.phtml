function showOPCostCentreDetails(iccid) {
    $('.card').hide();
    $.ajax({
        url: getBaseURL() + "workflow/index/getOPcostcentredetails",
        data: {'CostCentreId': iccid },
        type: 'post',
        success: function (data, textStatus, jqXHR) {
            var obj = JSON.parse(data);
            if (obj !=false) {
                $('#businessType').val(obj['BusinessTypeId']).prop('selected', true).trigger('change');
                $('#ProjectDescription').val(obj['CostCentreName']);
                $('#ProjectTypeId').val(obj['BusinessTypeId']).prop('selected', true).trigger('change');
                if (obj['SEZProject'] ==1) $('#isSezProject').prop('checked',true);
                else $('#isSezProject').prop('checked',true);

                if (obj['WBSReqMMS'] ==1) $('#materialStock').prop('checked',true);
                else $('#materialStock').prop('checked',true);

                if (obj['WBSReqWPM'] ==1) $('#workProgress').prop('checked',true);
                else $('#workProgress').prop('checked',true);

                if (obj['WBSReqClientBill'] ==1) $('#clientBill').prop('checked',true);
                else $('#clientBill').prop('checked',true);

                if (obj['WBSReqLS'] ==1) $('#LabourStrength').prop('checked',true);
                else $('#LabourStrength').prop('checked',true);

                if (obj['WBSReqMMSStockOut'] ==1) $('#MaterialConsumption').prop('checked',true);
                else $('#MaterialConsumption').prop('checked',true);

                if (obj['WBSReqAsset'] ==1) $('#plantMachinery').prop('checked',true);
                else $('#plantMachinery').prop('checked',true);

                $('#materialConsumptionBased').val(obj['MaterialConsumptionBased']).prop('selected', true).trigger('change');

                if (obj['ItemWiseIssue'] ==1) $('#issueRequire').prop('checked',true);
                else $('#issueRequire').prop('checked',true);

                $('#issueRateBased').val(obj['IssueRate']).prop('selected', true).trigger('change');
                $('#issueBased').val(obj['IssueBasedOn']).prop('selected', true).trigger('change');
                $('#transferBased').val(obj['TransferBasedOn']).prop('selected', true).trigger('change');
                $('#costControlBased').val(obj['CostControlBased']).prop('selected', true).trigger('change');
                $('#ohBudgetFrom').val(obj['OHBudget']).prop('selected', true).trigger('change');

                $('.card').show();
            }

        }
    });
}

