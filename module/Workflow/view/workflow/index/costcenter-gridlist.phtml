            success:function(data, textStatus, jqXHR){
                if (jqXHR.status == 200) {
                    $('#cost_search').html('');
                    $('#cost_search').html(data);
                } else
                    alert('Failed...');
            },
            error:function(jqXHR, textStatus, errorThrown) {
                alert('Failed....');
            }
        });
    }
</script>