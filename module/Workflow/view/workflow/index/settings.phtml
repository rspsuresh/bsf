<script>
    function formSettingSubmit() {
        $smsDate = $('#smsdate');
        $emailDate = $('#emaildate');
        $passwordReset = $('#reset');
        $payReminder = $('#payReminder');
        var errorFlag = 0;
        var errorFlagCount = 0;
        if($smsDate.val() == "" || !/\b\d{1,2}[\/-]\d{1,2}[\/-]\d{4}\b/.test($smsDate.val())){
            $smsDate.addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $smsDate.focus();
            }
        } else {
            $smsDate.removeClass('red_bdr');
        }
        if($emailDate.val() == "" || !/\b\d{1,2}[\/-]\d{1,2}[\/-]\d{4}\b/.test($emailDate.val())){
            $emailDate.addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $emailDate.focus();
            }
        } else {
            $emailDate.removeClass('red_bdr');
        }
        if($passwordReset.val() == "") {
            $passwordReset.addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $passwordReset.focus();
            }
        } else {
            $passwordReset.removeClass('red_bdr');
        }
        if($payReminder.val() == "") {
            $payReminder.addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $payReminder.focus();
            }
        } else {
            $payReminder.removeClass('red_bdr');
        }
        if(errorFlag == 0) {
            $('#theform').submit();
        }
    }
</script>