function newInfo(ele) {
    var inform = $(ele)[0].id;
    $('.'+inform).show();
    $('#'+inform).addClass('current');
    switch (inform) {
        case 'about':
            $('.head').html('About');
            $('.timeline').hide();
            $('.contacts').hide();
            $('#timeline').removeClass('current');
            $('#contacts').removeClass('current');
            break;
        case 'timeline':
            $('.head').html('Time Line');
            $('.about').hide();
            $('.contacts').hide();
            $('#about').removeClass('current');
            $('#contacts').removeClass('current');
            break;
        case 'contacts':
            $('.head').html('Contacts');
            $('.timeline').hide();
            $('.about').hide();
            $('#timeline').removeClass('current');
            $('#about').removeClass('current');
            break;
        default:
            $('.head').html('Time Line');
            $('.timeline').show();
            $('.about').hide();
            $('.contacts').hide();
            $('#timeline').addClass('current');
            $('#about').removeClass('current');
            $('#contacts').removeClass('current');
            break;
    }
}

function commentClick(ele) {
    $.ajax({
        url: getBaseURL() + 'application/index/activity-stream',
        type: 'POST',
        data: {'FeedId': ele, 'mode': 'commentall'},
        success: function (data, textStatus, jqXHR) {
            $('#commentli_'+ele).html(data);
            $(".strm_cnt_cmt").hide();
            $(".strm_news").css('border','none');
            $("#strm_cnt_cmt_"+ele).show();
            $("#strm_news_"+ele).css('border','1px solid #6face3');
        },
        error: function (jqXHR, textStatus, errorThrown) {
            if (jqXHR.status == 400)
                alert(jqXHR.responseText);
            else
                alert("Request Failed");
        }
    });
}
function likeFunc(FeedId,UserId,LikePos) {
    var likeCount = $('#like_count_'+FeedId).html();
    likeCount = parseInt(likeCount.slice(1, -1));
	$.ajax({
        url: getBaseURL() + 'application/index/activity-stream',
        type: 'POST',
        data: {'FeedId': FeedId,'UserId':UserId,'LikePos':LikePos, 'mode': 'like'},
        success: function (data, textStatus, jqXHR) {
            $('#like_'+FeedId).attr("onclick","likeFunc('"+FeedId+"','"+UserId+"','"+data+"')");
            var innerLike="";
            if(data==1) {
                 innerLike='You Likes';
                likeCount+=1;
            } else {
                innerLike='Like';
                likeCount-=1;
            }
            $('#like_count_'+FeedId).html('('+likeCount+')');
            $('#like_name_'+FeedId).html(innerLike);
        },
        error: function (jqXHR, textStatus, errorThrown) {
            if (jqXHR.status == 400)
                alert(jqXHR.responseText);
            else
                alert("Request Failed");

        }
    });
}
function commentPost(cmtFeedId,cmtUserId) {
    var commentCount = $('#comment_count_'+cmtFeedId).html();
    commentCount = parseInt(commentCount.slice(1, -1));
    var cmtTxt =  $('#comment_text_'+cmtFeedId).val();
    $.ajax({
        url: getBaseURL() + 'application/index/activity-stream',
        type: 'POST',
        data: {'FeedId': cmtFeedId,'UserId':cmtUserId, 'mode': 'comment','commentTxt':cmtTxt},
        success: function (data, textStatus, jqXHR) {
            commentCount+=1;
            $('#commentli_'+cmtFeedId).append(data);
            $('#comment_count_'+cmtFeedId).html('('+commentCount+')');
            $('#comment_text_'+cmtFeedId).val('');
        },
        error: function (jqXHR, textStatus, errorThrown) {
            if (jqXHR.status == 400)
                alert(jqXHR.responseText);
            else
                alert("Request Failed");

        }
    });
}
