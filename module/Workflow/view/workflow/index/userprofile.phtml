<script>
    function showimagepreview(input){     //input=$companyId
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function(e) {
                $('#imgprvw').attr('src', e.target.result);
            };
            filerdr.readAsDataURL(input.files[0]);
        }
    }
    function validateProfile() {
        var errorFlag = 0;
        var errorFlagCount = 0;
        if($('#emp_name').val() == "" || $('#emp_name').val() == null) {
            $('#emp_name').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#emp_name').focus();
            }
        } else {
            $('#emp_name').removeClass('red_bdr');
        }
        if($('#dob').val() == "" || $('#dob').val() == null) {
            $('#dob').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#dob').focus();
            }
        } else {
            $('#dob').removeClass('red_bdr');
        }
        if($('#address').val() == "" || $('#address').val() == null) {
            $('#address').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#address').focus();
            }
        } else {
            $('#address').removeClass('red_bdr');
        }
        if($('#email').val() == "" || validateEmail($('#email').val())==false) {
            $('#email').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#email').focus();
            }
        } else {
            $('#email').removeClass('red_bdr');
        }
        if($('#phone').val() == "" || $('#phone').val() == null) {
            $('#phone').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#phone').focus();
            }
        } else {
            $('#phone').removeClass('red_bdr');
        }
        if($('#mobile').val() == "" || $('#mobile').val() == null) {
            $('#mobile').addClass('red_bdr');
            errorFlagCount = errorFlagCount + 1;
            errorFlag = 1;
            if(errorFlagCount == 1) {
                $('#mobile').focus();
            }
        } else {
            $('#mobile').removeClass('red_bdr');
        }
        var len= $('#files').prop("files");
        if(len.length!=0) {
            var extension = (len[0].name).split('.').pop().toUpperCase();
            if (extension != "PNG" && extension != "JPG" && extension != "GIF" && extension != "JPEG") {
                alert('Invalid File Selected in Profile Picture');
                errorFlag = 1;
            }
        }
        if(errorFlag==0) {
            $('#form_data').submit();
        }
    }
</script>