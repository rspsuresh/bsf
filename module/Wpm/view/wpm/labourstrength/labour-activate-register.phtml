    <script>
        $(document).ready(function () {
            var data = <?php echo (isset($labourtransRegister)) ? json_encode($labourtransRegister) : ''; ?>;
            var source =
            {
                localdata: data,
                dataType: "json",
                dataFields: [
                    { name: 'RefNo', type: 'number' },
                    { name: 'LabourActivateId', type: 'number' },
                    { name: 'TransDate', type: 'string' },
                    { name: 'CostCentreName', type: 'string' },
                ],
                id: 'LabourActivateId'
            };
            var dataAdapter = new $.jqx.dataAdapter(source);
            var initrowdetails = function (index, parentElement, gridElement, datarecord) {
                var $tabsdiv = $($(parentElement).children()[0]);
                $tabsdiv.append(renderRowDetail(datarecord.LabourActivateId));
            };
            $("#treeGrid").jqxGrid(
                {
                    width: '100%',
                    pageable: true,
                    rowsheight: 35,
                    selectionMode: 'singleRow',
                    pagerButtonsCount: 6,
                    autoheight: true,
                    sortable: true,
                    source: dataAdapter,
                    showfilterrow: true,
                    filterable: true,
                    statusbarheight:25,
                    altrows: true,
                    editable: true,
                    columnsResize: true,
                    rowdetails: true,
                    initrowdetails: initrowdetails,
                    rowdetailstemplate: { rowdetails: "<div style='height:100%;overflow:auto; border:2px solid #5bc0de;'></div>", rowdetailsheight:400},
                    columns: [
                        { text: 'LabourActivateId', datafield: 'LabourTransferId', hidden: true, filterable: false},
                        { text: 'Ref No', datafield: 'RefNo', width: '30%', editable: false },
                        { text: 'Trans Date', datafield: 'TransDate', width: '20%', editable: false },
                        { text: 'Cost Centre', datafield: 'CostCentreName', width: '30%', editable: false },
                        { text: 'Action', sortable: false, filterable: false, align: 'left', width: '20%',
                            cellsrenderer: function (row) {
                                var labactId = $("#treeGrid").jqxGrid('getCellValue', row,'LabourActivateId'),
                                    editLink = '<a title="Edit" href="'+ getBaseURL() + 'wpm/labourstrength/labour-activate/'+labactId+'" style="padding-left: 15px;"><i class="fa fa-pencil-square-o reg-icon"></i></a>';
                                editLink += "&nbsp;&nbsp;" + '<button  title="Delete" onclick="deleteLab(event,'+row+')"><i class="fa fa-trash-o reg-icon"></i></button>';
                                return editLink;
                            }
                        }
                    ]
                });
            $("#treeGrid").jqxGrid('showgroupsheader', false);
            //Print option

            $('#treeGrid').on('rowexpand', function (event) {
                var prev_row = $('#treeGrid').jqxGrid('selectedrowindexes');
                if (prev_row != '') {
                    for (var i = 0; i < prev_row.length; i++) {
                        $('#treeGrid').jqxGrid('hiderowdetails', prev_row[i]);
                    }
                };
                var index = $('#treeGrid').jqxGrid('getrowboundindex', event.args.rowindex);
                $('#treeGrid').jqxGrid({selectedrowindexes: [index]});
            });

            $('#treeGrid').on('rowcollapse', function (event) {
                $('#treeGrid').jqxGrid('clearselection');
            });


            $("#excelExport").click(function () {
                $("#treeGrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
            });
            $("#csvExport").click(function () {
                $("#treeGrid").jqxGrid('exportdata', 'csv', 'jqxGrid');
            });
            $("#htmlExport").click(function () {
                $("#treeGrid").jqxGrid('exportdata', 'html', 'jqxGrid');
            });


            $("#treeGrid").bind('rowselect', function (event) {
                var row = event.args.rowindex;
                var datarow = $("#treeGrid").jqxGrid('getrowdata', row);

            });
        });

        function deleteLab(event, row)
        {
            event.preventDefault();
            var rowData = $("#treeGrid").jqxGrid('getrowdata', row);
            if (confirm("Do you want to delete?")) {
                $.post(getBaseURL() + 'wpm/labourstrength/labourtransfer', {
                        ltransid: rowData.LabourActivateferId,
                        type: 'Deletetransfer'
                    },
                    function (data, textStatus, jqXHR) {
                        if (jqXHR.status == 200)
                            $("#treeGrid").jqxGrid("deleterow", row);
                        else
                            alert('Failed to delete the request!');
                    });
            }
        }
        function renderRowDetail(id) {


            $.ajax({
                url: getBaseURL()+'wpm/template/get-labour-activate',
                type: 'POST',
                data: {LabourActivateId: id},
                async: false,
                success: function(data,status, xhr) {
                    if(xhr.status == 200)
                        dataValue = data;
                }, error: function(xhr, status, errorThrown) {
                }
            });
            return dataValue;
        }

    </script>