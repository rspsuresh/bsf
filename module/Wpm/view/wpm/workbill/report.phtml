                    '<body>\n' + gridContent + '\n</body>\n</html>';
            document.write(pageContent);
            document.close();
            newWindow.print();
        });
    });

    function bindRequests() {
        var costCentreId = $('#CostCentre').val();
        var fromDate=$('#fromDate').val();
        var toDate=$('#toDate').val();
        $('.loading_area').show();
        $.ajax({
            url:getBaseURL()+'wpm/workbill/report',
            type:"post",
            data:{"CostCentreId" : costCentreId,"toDate":toDate,"fromDate": fromDate},
            dataType:"json",
            success:function(data, textStatus, jqXHR){
                if(jqXHR.status == 200) {
                    renderRequestResources(data);
                } else {
                    renderRequestResources();
                }
            }, error: function (xhr, status, error) {
                renderRequestResources();
            }
        });
    }
    function renderRequestResources(data) {
        source.localdata = [];
        source.datafields = datafields;
        jqxProp.columns = [
            { text: 'Ref No.', datafield: 'RefNo', pinned: true ,width:"6%" },
            { text: 'Ref Date', datafield: 'RefDate', align: 'center', pinned: true, width:"10%" },
            { text: 'Vendor', datafield: 'VendorName', align: 'center', pinned: true, width:"12%" }
        ];

        if(data) {
            // set columns
            $.each(data.formats, function (i,o) {
                datafields.push({ name: o.Description, type: "number" });
                jqxProp.columns.push({ text: o.Description, datafield: o.Description, width: "10%", align: 'right', cellsalign: 'right', cellsformat: 'd2', aggregates: ['sum'],
                    aggregatesrenderer: function (aggregates, column, element, summaryData) {
                        var renderstring = "<div style='margin:8px;'>";
                        $.each(aggregates, function (key, value) {
                            var name = key == 'price';
                            renderstring += '<div><strong>' + value + '</div></strong>';
                        });
                        renderstring += "</div>";
                        return renderstring;
                    }
                });
            });
            var customRows = [];
            var tempId = 0;
            $.each(data.rows, function(i,o) {
                if(tempId != o.BillRegisterId) {
                    tempId = o.BillRegisterId;
                    var tempObj = {"RefNo": o.RefNo, "RefDate": o.RefDate, 'VendorName': o.VendorName};
                    tempObj[o.Description] = o.Amount;
                    customRows.push(tempObj);
                    return;
                }
                customRows[(customRows.length - 1)][o.Description] = o.Amount;
            });
            source.localdata = customRows;
        }

        jqxProp.source = new $.jqx.dataAdapter(source);
        $jqxgrid.jqxGrid(jqxProp);
        $('.loading_area').hide();
    }
</script>