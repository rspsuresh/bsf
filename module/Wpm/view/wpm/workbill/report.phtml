<script type="text/javascript">
    $(document).ready(function () {
        $(".multiple_dropdown").select2({});
        $('.date_picker').datepicker({
            'format': 'dd-mm-yyyy'
        }).on('changeDate', function () {
            $('.datepicker').hide();
            bindRequests();
        });

