                '<!DOCTYPE html>\n' +
                '<html>\n' +
                '<head>\n' +
                '<meta charset="utf-8" />\n' +
                '<title> Work Completion Register </title>\n' +
                '<h1> Work Completion Register</h1>\n' +
                '</head>\n' +
                '<body>\n' + gridContent + '\n</body>\n</html>';
