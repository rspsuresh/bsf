<script>
$(document).ready(function () {
	var data = <?php echo (isset($wceRegister)) ? json_encode($wceRegister) : ''; ?>;
	var source =
	{
		localdata: data,
		dataType: "json",
		dataFields: [
			{ name: 'WCERegisterId', type: 'number' },
            { name: 'WCENo', type: 'string' },
            { name: 'WCEDate', type: 'string' },
            { name: 'CostCentreName', type: 'string' },
            { name: 'FDate', type: 'string' },
            { name: 'TDate', type: 'string' },
		],
		id: 'WCERegisterId'
	};
	var dataAdapter = new $.jqx.dataAdapter(source);
    var initrowdetails = function (index, parentElement, gridElement, datarecord) {
        var $tabsdiv = $($(parentElement).children()[0]);
        $tabsdiv.append(renderRowDetail(datarecord.WCERegisterId));
    };
	$("#treeGrid").jqxGrid(
	{
        width: '100%',
        theme: 'bootstrap',
        pagerButtonsCount: 6,
        source: dataAdapter,
        pageable: true,
        sortable: true,
        filterable:true,
        altrows: true,
        enabletooltips: true,
        autoheight: true,
        editable: false,
        selectionmode: 'singlerow',
        showfilterrow: true,
        rowdetails: true,
        initrowdetails: initrowdetails,
        rowdetailstemplate: { rowdetails: "<div style='height:100%;overflow:auto; background:#E8E6F0;border:2px solid #D3CEED;padding-top:20px;'></div>", rowdetailsheight:270},
        columns: [
			{ text: 'WCERegisterId', datafield: 'WCERegisterId', hidden: true, filterable: false},
            { text: 'WCE Date', datafield: 'WCEDate', width: '15%', editable: false },
            { text: 'WCE No', datafield: 'WCENo', width: '15%', editable: false },
            { text: 'Cost Centre', datafield: 'CostCentreName', width: '30%', editable: false },
            { text: 'From Date', datafield: 'FDate', width: '15%', editable: false },
            { text: 'To Date', datafield: 'TDate', width: '15%', editable: false },
			{ text: 'Action', sortable: false, filterable: false, align: 'left', width: '10%',
                cellsrenderer: function (row) {
                    var wceRegisterId = $("#treeGrid").jqxGrid('getCellValue', row, 'WCERegisterId'),
                        editLink = '<a title="Edit" href="'+ getBaseURL() + 'wpm/workcompletion/entry/'+wceRegisterId+'" style="padding-left: 15px;"><i class="fa fa-pencil-square-o reg-icon"></i></a>';
                    editLink += "&nbsp;&nbsp;" + '<button style="background: transparent;" title="Delete" onclick="deleteWCE(event,'+row+')"><i class="fa fa-trash-o reg-icon"></i></button>';
                    return editLink;
                }
            }
		]
	});
    $("#treeGrid").jqxGrid('showgroupsheader', false);
    //Print option
    $("#excelExport").click(function () {
        $("#treeGrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
    });
    $("#csvExport").click(function () {
        $("#treeGrid").jqxGrid('exportdata', 'csv', 'jqxGrid');
    });
    $("#htmlExport").click(function () {
        $("#treeGrid").jqxGrid('exportdata', 'html', 'jqxGrid');
    });

    $("#print").click(function () {
        var gridContent = $("#treeGrid").jqxGrid('exportdata', 'html');
        //var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);
        var newWindow = window.open('', '', 'width=800, height=500'),
            document = newWindow.document.open(),
