    $('.followupId').on('click',function(){
        var urlId = $(this).attr('data-index');
        var sType ="";
        if (urlId==1)  sType ="work";
        else if (urlId==2)  sType ="hire";
        else if (urlId==3)  sType ="service";
        var selText = $(this).text();
        $(this).parents('.btn-group').find('.dropdown-toggle').html(selText+'<span class="caret"></span>');
        $.post(getBaseURL()+'wpm/workorder/register', { OrderType: sType },
            function(data) {
                var rData = JSON.parse(data);
                orderRegisterGrid(sType,rData);
            });
    });



    function orderRegisterGrid (a,b) {
        var par = $("#treeGrid").parent();
        $("#treeGrid").remove();
        $('<div id="treeGrid"> </div>').appendTo(par);
        if(a == 'hire'){
            hireOrderRegisterGrid(b);
        } else if(a == 'service'){
            serviceOrderRegisterGrid(b);
        }else if(a == 'work'){
            workOrderRegisterGrid(b);
        }
    }

    function workOrderRegisterGrid(x){
        var data = x;
        var source = {
            localdata:data,
            async: false,
            dataType: "json",
            dataFields: [
                { name: 'WORegisterId', type: 'number' },
                { name: 'WONo', type: 'string' },
                { name: 'WODate', type: 'date' },
                { name: 'CostCentreName', type: 'string' },
                { name: 'VendorName', type: 'string' },
                { name: 'NetAmount', type: 'number' },
                { name: 'WorkType', type: 'string' },
                { name: 'Approve', type: 'string' },
            ],
            id: 'WORegisterId'
        };
        var dataAdapter = new $.jqx.dataAdapter(source);
        var initrowdetails = function (index, parentElement, gridElement, datarecord) {
            var $tabsdiv = $($(parentElement).children()[0]);
            $tabsdiv.append(renderRowDetail(datarecord.WORegisterId));
        };

        $('#treeGrid').jqxGrid({
            width: '100%',
            theme: 'bootstrap',
            pagerButtonsCount: 6,
            source: dataAdapter,
            pageable: true,
            sortable: true,
            filterable:true,
            altrows: true,
            enabletooltips: true,
            autoheight: true,
            editable: false,
            selectionmode: 'singlerow',
            showfilterrow: true,
            rowdetails: true,
            initrowdetails: initrowdetails,
            rowdetailstemplate: { rowdetails: "<div style='height:100%;overflow:auto; border:2px solid #5bc0de;'></div>", rowdetailsheight:400},
            columns: [
                { text: 'WORegisterId', datafield: 'WORegisterId',  hidden: true, filterable: false},
                { text: 'WO Date', dataField: 'WODate', width:'10%', align: 'left', filtertype:'date', cellsformat: 'dd-MM-yyyy'},
                { text: 'WO No', dataField: 'WONo', width:'10%',
                    cellsrenderer: function (row) {
                        return '<div class="text-left" style="margin: 6px 0 0 10px;">' +$('#treeGrid').jqxGrid('getCellValue', row, 'WONo') + '</div>';
                    }
                },
                { text: 'Cost Centre', dataField: 'CostCentreName', width:'18%'},
                { text: 'Vendor', dataField: 'VendorName', width:'18%'},
                { text: 'Work Type', dataField: 'WorkType', width:'12%'},
                { text: 'Amount', dataField: 'NetAmount', width:'12%', align: 'right',
                    cellsrenderer: function (row) {
                        return '<div class="text-right" style="margin: 6px 10px 0 0;">' +sanitizeNumber($('#treeGrid').jqxGrid('getCellValue', row, 'NetAmount'),2, true) + '</div>';
                    },aggregates: ['sum'],
                    aggregatesrenderer: function (aggregates) {
                        var renderstring = "";
                        $.each(aggregates, function (key, value) {
                            renderstring += '<div style="position: relative; text-align: right;  margin: 4px; font-size:14px;padding:5px;font-weight:bold; overflow: hidden;">'+ sanitizeNumber(value,2,true) +'</div>';
                        });
                        return renderstring;
                    }
                },
                { text: 'Approve', dataField: 'Approve', width:'10%', align: 'center',
                    cellsrenderer: function (row) {
                        return '<div class="text-center" style="margin: 6px 10px 0 0;">' +$('#treeGrid').jqxGrid('getCellValue', row, 'Approve') + '</div>';
                    }
                },
                { text: 'Action', sortable: false, filterable: false, align: 'left', width:'10%',
                    cellsrenderer: function (row) {
                        var WorkOrderId = $('#treeGrid').jqxGrid('getCellValue', row, 'WORegisterId'),
                            approve = $('#treeGrid').jqxGrid('getCellValue', row, 'Approve'),
                            editLink = '<a title="Edit" href="'+ getBaseURL() + 'wpm/workorder/entry/'+WorkOrderId+'" style="padding-left: 15px;"><i class="fa fa-pencil-square-o reg-icon"></i></a>';
                        if(approve == 'No') {
                            editLink += "&nbsp;&nbsp;" + '<button style="background: transparent;" title="Delete" onclick="orderDelete(this,' + row + ')"><i class="fa fa-trash-o reg-icon"></i></button>';
                        }
                        return editLink += "&nbsp;&nbsp;" + '<button style="background: transparent;" title="Report" onclick="orderShow(this,'+row+','+WorkOrderId+')"><i class="fa fa-file-text-o reg-icon-file"></i></button>';
                        //+= "&nbsp;&nbsp;" + '<a title="Report" href="'+ getBaseURL() + 'wpm/report/workorderdetreport/'+WorkOrderId+'"><i class="fa fa-file-text-o reg-icon-file"></i></a>';
                    }
                }
            ]
        });

        $("#treeGrid").jqxGrid('showgroupsheader', false);
        //Print option
        $("#excelExport").click(function () {
            $("#treeGrid").jqxGrid('exportdata', 'xls', 'jqxGrid');
        });
        $("#csvExport").click(function () {
            $("#treeGrid").jqxGrid('exportdata', 'csv', 'jqxGrid');
        });
        $("#htmlExport").click(function () {
            $("#treeGrid").jqxGrid('exportdata', 'html', 'jqxGrid');
        });

        $('#treeGrid').on('rowexpand', function (event) {
            var prev_row = $('#treeGrid').jqxGrid('selectedrowindexes');
            if (prev_row != '') {
                for (var i = 0; i < prev_row.length; i++) {
                    $('#treeGrid').jqxGrid('hiderowdetails', prev_row[i]);
                }
            };
            var index = $('#treeGrid').jqxGrid('getrowboundindex', event.args.rowindex);
            $('#treeGrid').jqxGrid({selectedrowindexes: [index]});
        });

        $('#treeGrid').on('rowcollapse', function (event) {
            $('#treeGrid').jqxGrid('clearselection');
        });

        $("#print").click(function () {
            var gridContent = $("#treeGrid").jqxGrid('exportdata', 'html');
            //var gridContent = $("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);
            var newWindow = window.open('', '', 'width=800, height=500'),
                document = newWindow.document.open(),
                pageContent =
                    '<!DOCTYPE html>\n' +
                    '<html>\n' +
                    '<head>\n' +
                    '<meta charset="utf-8" />\n' +
                    '<title> Work Order Register </title>\n' +
                    '<h1> Work Order Register </h1>\n' +
                    '</head>\n' +
                    '<body>\n' + gridContent + '\n</body>\n</html>';
            document.write(pageContent);
            document.close();
            newWindow.print();

            /*$("#jqxgrid").jqxGrid('exportdata', 'html', 'jqxGrid', true, null, false);*/
        });

        $("#treeGrid").bind('rowselect', function (event) {
            var row = event.args.rowindex;
            var datarow = $("#treeGrid").jqxGrid('getrowdata', row);

        });

        $('#btnDeleteYes').on('click', function () {
            var remarks = $remarks.val();
            if(remarks.length == 0) {
                showError($remarks, 'Required!');
                return;
            } else
                removeError($remarks);

            $deleteModal.modal('hide');
            var rowData = $('#treeGrid').jqxGrid('getrowdata', $deleteModal.data('row'));
            $.ajax({
                url: getBaseURL() + 'wpm/workorder/deleteorder',
                type: 'POST',
                data: {"WorkOrderId": rowData.WorkOrderId, "Remarks": remarks, "Type": 'update'},
                async: false,
                success:function(data, textStatus, jqXHR){
                    if (jqXHR.status == 200)
                        $('#treeGrid').jqxGrid("deleterow", rowData.uid);
                    else
                        alert('Failed to delete the work order!');
                },
                error:function(jqXHR, textStatus, errorThrown){
                    if (jqXHR.status == 403)
                        alert(jqXHR.responseText);
                    else
                        alert('Failed to delete the work order!');
                }
            });
            $remarks.val('');
        });
        //    var WorkOrderId = $('#treeGrid').jqxGrid('getCellValue', row, 'WORegisterId');
        //    console.log(WorkOrderId)
        function renderRowDetail(id) {
