    function getOrderType(){
        $.post(getBaseURL()+'wpm/workorder/register', { OrderType: $('#OrderType').val() },
            function(data) {
                var rData = JSON.parse(data);
                $('#OrderTypeIn').val(rData.oType).trigger('change');
